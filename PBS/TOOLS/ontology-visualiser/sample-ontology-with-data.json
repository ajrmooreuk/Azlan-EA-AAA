{
  "@context": "https://schema.org",
  "@type": "DefinedTermSet",
  "name": "Marketing Campaign Ontology",
  "description": "Sample ontology with embedded test data to demonstrate drill-down and data viewing capabilities",
  "version": "1.0.0",

  "entities": [
    {
      "@id": "Campaign",
      "name": "Campaign",
      "description": "A marketing campaign targeting specific audiences through various channels",
      "entityType": "core",
      "schemaOrgBase": "schema:Action",
      "properties": [
        { "name": "campaignId", "type": "string", "required": true },
        { "name": "name", "type": "string", "required": true },
        { "name": "status", "type": "enum", "values": ["draft", "active", "paused", "completed"] },
        { "name": "startDate", "type": "date" },
        { "name": "endDate", "type": "date" },
        { "name": "budget", "type": "number" }
      ]
    },
    {
      "@id": "Audience",
      "name": "Audience",
      "description": "A target audience segment for campaigns",
      "entityType": "core",
      "schemaOrgBase": "schema:Audience",
      "properties": [
        { "name": "audienceId", "type": "string", "required": true },
        { "name": "name", "type": "string", "required": true },
        { "name": "size", "type": "integer" },
        { "name": "criteria", "type": "object" }
      ]
    },
    {
      "@id": "Channel",
      "name": "Channel",
      "description": "A distribution channel for marketing content",
      "entityType": "supporting",
      "schemaOrgBase": "schema:BroadcastChannel",
      "properties": [
        { "name": "channelId", "type": "string", "required": true },
        { "name": "name", "type": "string", "required": true },
        { "name": "type", "type": "enum", "values": ["email", "sms", "social", "display", "search"] }
      ]
    },
    {
      "@id": "Content",
      "name": "Content",
      "description": "Marketing content delivered through campaigns",
      "entityType": "supporting",
      "schemaOrgBase": "schema:CreativeWork",
      "properties": [
        { "name": "contentId", "type": "string", "required": true },
        { "name": "title", "type": "string", "required": true },
        { "name": "body", "type": "text" },
        { "name": "format", "type": "enum", "values": ["html", "plain", "rich"] }
      ]
    },
    {
      "@id": "Metric",
      "name": "Metric",
      "description": "Performance metrics for campaigns",
      "entityType": "supporting",
      "schemaOrgBase": "schema:QuantitativeValue",
      "properties": [
        { "name": "metricId", "type": "string", "required": true },
        { "name": "name", "type": "string", "required": true },
        { "name": "value", "type": "number" },
        { "name": "unit", "type": "string" }
      ]
    }
  ],

  "relationships": [
    {
      "name": "targets",
      "description": "Campaign targets an audience",
      "domainIncludes": ["Campaign"],
      "rangeIncludes": ["Audience"],
      "cardinality": "1..*"
    },
    {
      "name": "usesChannel",
      "description": "Campaign uses a distribution channel",
      "domainIncludes": ["Campaign"],
      "rangeIncludes": ["Channel"],
      "cardinality": "1..*"
    },
    {
      "name": "delivers",
      "description": "Campaign delivers content",
      "domainIncludes": ["Campaign"],
      "rangeIncludes": ["Content"],
      "cardinality": "1..*"
    },
    {
      "name": "measuredBy",
      "description": "Campaign performance measured by metrics",
      "domainIncludes": ["Campaign"],
      "rangeIncludes": ["Metric"],
      "cardinality": "0..*"
    },
    {
      "name": "optimizedFor",
      "description": "Content optimized for a channel",
      "domainIncludes": ["Content"],
      "rangeIncludes": ["Channel"],
      "cardinality": "1..1"
    }
  ],

