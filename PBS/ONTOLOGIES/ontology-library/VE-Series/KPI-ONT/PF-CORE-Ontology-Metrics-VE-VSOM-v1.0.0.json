  "businessRules": [
    {
      "ruleId": "BR-001",
      "name": "Vision Lifecycle Cascade",
      "condition": "Vision.status = 'Archived'",
      "action": "All child Strategy entities MUST have status IN ['Superseded', 'Archived']",
      "severity": "Critical"
    },
    {
      "ruleId": "BR-002",
      "name": "P0 Objective Quarterly Coverage",
      "condition": "StrategicObjective.priority = 'P0-Critical'",
      "action": "At least one child Objective MUST exist with timeframe = current_quarter OR next_quarter",
      "severity": "High"
    },
    {
      "ruleId": "BR-003",
      "name": "Active OKR Completeness",
      "condition": "Objective.status = 'Active'",
      "action": "Objective MUST have minimum 2 KeyResult entities AND all KeyResults MUST have currentValue ≠ NULL",
      "severity": "Critical"
    },
    {
      "ruleId": "BR-004",
      "name": "Key Result Achievement",
      "condition": "KeyResult.currentValue ≥ KeyResult.targetValue",
      "action": "KeyResult.progressPercentage MUST = 100 AND parent Objective.status SHOULD = 'Completed'",
      "severity": "Medium"
    },
    {
      "ruleId": "BR-005",
      "name": "KPI Data Freshness Alert",
      "condition": "KPI.updateFrequency = 'Daily' AND (CURRENT_TIMESTAMP - KPI.measurementTimestamp) > 36 hours",
      "action": "Data quality alert MUST be triggered",
      "severity": "Medium"
    },
    {
      "ruleId": "BR-006",
      "name": "VE Analysis Completeness",
      "condition": "VEAnalysis.recommendation IN ['Proceed', 'Optimize']",
      "action": "VEAnalysis MUST have minimum 3 VEFunction entities with functionType IN ['Basic', 'Secondary']",
      "severity": "High"
    },
    {
      "ruleId": "BR-007",
      "name": "VE Basic Function Requirement",
      "condition": "VEAnalysis has zero VEFunction entities with functionType = 'Basic'",
      "action": "VEAnalysis is incomplete; MUST identify primary purpose function",
      "severity": "Critical"
    },
    {
      "ruleId": "BR-008",
      "name": "VE Cost Allocation Integrity",
      "condition": "SUM(VECostElement.amount WHERE veAnalysisId=X) ≠ VEAnalysis.totalCost WHERE analysisId=X",
      "action": "Cost allocation incomplete; MUST be corrected before approval",
      "severity": "Critical"
    },
    {
      "ruleId": "BR-009",
      "name": "VE Value Ratio Decision Threshold",
      "condition": "VEAnalysis.valueRatio < 0.8",
      "action": "VEAnalysis.recommendation MUST be 'Redesign' OR 'Cancel' OR provide explicit rationale",
      "severity": "High"
    },
    {
      "ruleId": "BR-010",
      "name": "Metric-KPI Relationship Consistency",
      "condition": "KPI.calculationMethod references Metric.metricId",
      "action": "Explicit 'quantifiedBy' relationship MUST exist in relationship graph",
      "severity": "Medium"
    },
    {
      "ruleId": "BR-011",
      "name": "Objective-Strategic Objective Temporal Alignment",
      "condition": "Objective.strategicObjectiveId IS NOT NULL",
      "action": "Objective.timeframe MUST be within StrategicObjective.timeframe date range",
      "severity": "High"
    },
    {
      "ruleId": "BR-012",
      "name": "Balanced Scorecard KPI Coverage",
      "condition": "Organization has >10 active KPIs",
      "action": "KPIs SHOULD span all four Balanced Scorecard categories (minimum 1 per category)",
      "severity": "Low"
    }
  ],
