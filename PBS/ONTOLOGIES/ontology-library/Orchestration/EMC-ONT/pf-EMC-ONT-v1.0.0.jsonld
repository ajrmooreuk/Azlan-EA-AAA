        "name": "Foundation Layer",
        "description": "Core organizational entities and context",
        "ontologies": [
          {
            "@id": "pf:ORG-ONT",
            "name": "Organization Foundation",
            "version": "2.1.0",
            "path": "pfc-ontologies/ORG-ONT/org-ontology-v2.1.0-oaa-v5.json",
            "status": "Production",
            "dependencies": []
          },
          {
            "@id": "pf:ORG-CONTEXT-ONT",
            "name": "Organization Context Hub",
            "version": "1.0.1",
            "path": "pfc-ontologies/ORG-CONTEXT/org-context-ontology-v1.0.1.json",
            "status": "Production",
            "dependencies": ["pf:ORG-ONT"]
          },
          {
            "@id": "pf:ORG-MAT-ONT",
            "name": "Organization Maturity",
            "version": "1.0.0",
            "path": "pfc-ontologies/ORG-CONTEXT/ORG-MAT-ONT/org-maturity-v1.0.0-oaa-v5.json",
            "status": "Production",
            "dependencies": ["pf:ORG-ONT"]
          }
        ]
      },
      {
        "@id": "emc:series:ve",
        "name": "VE-Series (Value Engineering)",
        "description": "Strategic value and role definitions",
        "ontologies": [
          {
            "@id": "pf:VE-VSOM-ONT",
            "name": "Vision-Strategy-Objectives-Metrics",
            "version": "2.1.0",
            "path": "pfc-ontologies/VE-Series-ONT/VE-VSOM-ONT/vsom-ontology-v2.1.0-oaa-v5.json",
            "status": "Production",
            "dependencies": ["pf:ORG-ONT"]
          },
          {
            "@id": "pf:VE-OKR-ONT",
            "name": "Objectives & Key Results",
            "version": "1.0.0",
            "path": "pfc-ontologies/VE-Series-ONT/VE-OKR-ONT/PFC-ONT-OKR-v1_0_0.jsonld",
            "status": "Partial",
            "dependencies": ["pf:VE-VSOM-ONT"]
          },
          {
            "@id": "pf:VE-KPI-ONT",
            "name": "Key Performance Indicators",
            "version": "Planned",
            "status": "Placeholder",
            "dependencies": ["pf:VE-OKR-ONT"]
          },
          {
            "@id": "pf:VE-VP-ONT",
            "name": "Value Proposition",
            "version": "1.2.0",
            "path": "pfc-ontologies/VE-Series-ONT/VE-VP-ONT/value-proposition-ontology-v1.2.0-oaa-v5.jsonld",
            "status": "Production",
            "dependencies": ["pf:VE-VSOM-ONT", "pf:VE-RRR-ONT"]
          },
          {
            "@id": "pf:VE-PMF-ONT",
            "name": "Product-Market Fit",
            "version": "Draft",
            "status": "Documentation",
            "dependencies": ["pf:VE-VP-ONT"]
          },
          {
            "@id": "pf:VE-RRR-ONT",
            "name": "Roles-RACI-RBAC",
            "version": "3.1.0",
            "path": "pfc-ontologies/VE-Series-ONT/VE-RRR-ONT/pf-RRR-ONT-v3.1.0.jsonld",
            "status": "Production",
            "dependencies": ["pf:ORG-ONT"],
            "dataFiles": [
              "RRR-DATA-csuite-roles-v2.0.0.jsonld",
              "RRR-DATA-architectural-roles-v1.0.0.jsonld"
            ]
          }
        ]
      },
      {
        "@id": "emc:series:pe",
        "name": "PE-Series (Process Engineering)",
        "description": "Process, project, and execution management",
        "ontologies": [
          {
            "@id": "pf:PE-Process-Engr-ONT",
            "name": "Process Engineering",
            "version": "2.0.0",
            "path": "pfc-ontologies/PE-Series-ONT/PE-Process-Engr-ONT/process-engineering-v2.0.0-oaa-v5.json",
            "status": "Production",
            "dependencies": ["pf:ORG-ONT"],
            "aiAgentSupport": true
          },
          {
            "@id": "pf:PE-PPM-ONT",
            "name": "Portfolio-Programme-Project Management",
            "version": "3.0.0",
            "path": "pfc-ontologies/PE-Series-ONT/PE-PPM-ONT/ppm-module-v3.0.0-oaa-v5.json",
            "status": "Production",
            "dependencies": ["pf:PE-Process-Engr-ONT"],
            "features": ["PBS/WBS structures", "Portfolio prioritization", "Programme governance"]
          },
          {
            "@id": "pf:PE-EFS-ONT",
            "name": "Epics-Features-Stories",
            "version": "1.0.0",
            "path": "pfc-ontologies/PE-Series-ONT/PE-EFS/efs-ontology.jsonld",
            "status": "Near-Production",
            "dependencies": ["pf:VE-VP-ONT", "pf:VE-PMF-ONT"],
            "lineageMappings": ["Pains→Epics", "Gains→Features", "Benefits→Stories"]
