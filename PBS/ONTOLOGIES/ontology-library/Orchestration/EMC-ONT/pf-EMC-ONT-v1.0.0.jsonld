          },
          {
            "@id": "pf:CA-ONT",
            "name": "Competitive Analysis",
            "version": "2.1.0",
            "path": "pfc-ontologies/CA-ONT/competitive-analysis-v2.1.0-oaa-v5.json",
            "status": "Production",
            "dependencies": ["pf:CL-ONT"]
          },
          {
            "@id": "pf:GA-ONT",
            "name": "Gap Analysis",
            "version": "1.0.0",
            "path": "pfc-ontologies/GA-ONT/gap-analysis-v1.0.0-oaa-v5.json",
            "status": "Production",
            "dependencies": ["pf:CA-ONT"]
          }
        ]
      }
    ]
  },

  "compositionRules": {
    "@type": "emc:CompositionRulesEngine",
    "description": "Rules for determining ontology composition based on scoping inputs",
    "rules": [
      {
        "@id": "emc:rule:foundation-always",
        "name": "Foundation Always Required",
        "condition": "Any enterprise model",
        "action": "Include pf:ORG-ONT as base",
        "priority": 1
      },
      {
        "@id": "emc:rule:dependency-chain",
        "name": "Dependency Chain Resolution",
        "condition": "When ontology X is required",
        "action": "Include all ontologies in X.dependencies",
        "priority": 2
      },
      {
        "@id": "emc:rule:maturity-filter",
        "name": "Maturity-Based Filtering",
        "condition": "orgContext.maturityLevel < 3",
        "action": "Exclude advanced ontologies (KPI-ONT, GA-ONT)",
        "priority": 3
      },
      {
        "@id": "emc:rule:pfi-instance",
        "name": "PFI Instance Data Loading",
        "condition": "contextLevel = PFI AND productContext specified",
        "action": "Load product-specific instance data files",
        "priority": 4
      },
      {
        "@id": "emc:rule:agentic-requirements",
        "name": "Agentic Build Requirements",
        "condition": "requirementScope = AGENTIC",
        "action": "Include PE-Process-Engr-ONT with AI agent definitions",
        "priority": 5
      }
    ]
  },

  "pfiInstanceConfigurations": {
    "@type": "emc:InstanceConfigurationRegistry",
    "description": "Pre-defined configurations for PFI product instances",
    "instances": [
      {
        "@id": "emc:instance:baiv-aiv",
        "name": "BAIV AI Visibility",
        "productCode": "BAIV-AIV",
        "description": "AI Visibility and Brand Authority platform for B2B marketing",
        "basePath": "pfi-BAIV-AIV-ONT/",
        "ontologyConfiguration": {
          "contextLevel": "PFI",
          "requirementScopes": ["PRODUCT", "COMPETITIVE", "ORG-DESIGN"],
          "requiredOntologies": [
            "pf:VE-VP-ONT",
            "pf:VE-RRR-ONT",
            "pf:PE-EFS-ONT",
            "pf:CA-ONT"
          ],
          "instanceDataFiles": [
            {"ontology": "pf:VE-VP-ONT", "file": "baiv-ai-visibility-vp-instance-v1.0.0.jsonld"},
            {"ontology": "pf:VE-RRR-ONT", "file": "RRR-DATA-BAIV-AIV-roles-v1.0.0.jsonld"},
            {"ontology": "pf:PE-EFS-ONT", "file": "EFS-DATA-BAIV-AIV-security-v1.0.0.jsonld"},
            {"ontology": "pf:CA-ONT", "file": "AIV-Competitive-ONT/ai-visibility-competitive-analysis-ontology.json"}
          ]
        },
        "orgContextFiltering": {
          "clientPerspectives": ["PlatformOperator", "AgencyPartner", "DirectClient", "LimitedAccess"],
          "roleDataset": "RRR-DATA-csuite-roles-v2.0.0.jsonld",
          "filterPath": "L4ApplicationRoleInstance_BAIV_AIV"
        }
      }
    ]
  },

  "graphCompositionPatterns": {
    "@type": "emc:GraphCompositionPatterns",
    "description": "Patterns for composing ontologies into unified graph models",
    "patterns": [
      {
        "@id": "emc:pattern:hub-spoke",
        "name": "Hub-Spoke Pattern",
        "description": "ORG-CONTEXT as central hub connecting domain ontologies",
        "hub": "pf:ORG-CONTEXT-ONT",
        "spokes": ["VE-Series", "PE-Series", "Competitive Layer"],
        "useCase": "Full enterprise model with loose coupling"
      },
      {
        "@id": "emc:pattern:lineage-chain",
        "name": "Lineage Chain Pattern",
        "description": "Sequential dependency from strategy to execution",
        "chain": ["VSOM → OKR → VP → PMF → EFS"],
        "useCase": "Strategy-to-execution traceability"
      },
      {
        "@id": "emc:pattern:bridge-join",
        "name": "Bridge Join Pattern",
        "description": "Cross-ontology relationships via join points",
        "joins": [
          {"from": "VP.IdealCustomerProfile", "to": "RRR.Role", "via": "JP-VP-RRR-001"},
          {"from": "EFS.Story", "to": "PPM.WorkPackage", "via": "JP-PE-001"},
          {"from": "VSOM.Objective", "to": "OKR.Objective", "via": "JP-VE-001"}
        ],
        "useCase": "Cross-domain queries and reporting"
      }
    ]
  },

  "agenticBuildSupport": {
    "@type": "emc:AgenticBuildFramework",
    "description": "Support for AI-augmented solution builds using ontologies",
    "capabilities": [
      {
        "@id": "emc:agentic:ontology-driven-agents",
        "name": "Ontology-Driven AI Agents",
        "description": "AI agents that use ontology schemas for context and reasoning",
        "requiredOntologies": ["pf:PE-Process-Engr-ONT"],
        "agentTypes": ["Discovery Agent", "Analysis Agent", "Orchestration Agent", "Validation Agent"]
      },
      {
        "@id": "emc:agentic:graph-as-context",
        "name": "Graph as Tech-Agnostic Layer",
        "description": "Use ontology graph as data/information model independent of implementation",
        "benefits": [
          "Database-agnostic data modeling",
          "Cross-system interoperability",
          "Semantic reasoning support",
          "Version-controlled schema evolution"
        ]
      },
      {
        "@id": "emc:agentic:ppm-integration",
        "name": "PPM-Agentic Integration",
        "description": "Connect portfolio priorities to agentic build pipelines",
        "flow": "Portfolio → Programme → Project → EFS → AI Agent Tasks",
        "ontologyChain": ["pf:PE-PPM-ONT", "pf:PE-EFS-ONT", "pf:PE-Process-Engr-ONT"]
      }
    ]
  },

  "validation": {
    "conformsTo": "pf:OAA-ONT-v5.0",
    "entityCount": 8,
    "relationshipCount": 15,
    "businessRulesCount": 5,
    "oaaGates": {
      "G1-EntityDescriptions": "PASS",
      "G2-Cardinality": "PASS",
      "G3-Connectivity": "PASS",
      "G4-BusinessRules": "PASS",
      "G5-TestData": "PENDING - Requires instance configurations",
      "G6-Registry": "PENDING - Registration required"
    }
  }
}
