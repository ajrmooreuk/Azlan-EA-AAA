{
  "@context": {
    "@vocab": "https://schema.org/",
    "pf": "https://platform-foundation.io/ontology/v1/",
    "emc": "https://platform-foundation.io/ontology/v1/emc/",
    "xsd": "http://www.w3.org/2001/XMLSchema#"
  },
  "@type": "pf:OntologySchema",
  "@id": "pf:EMC-ONT-v1.0.0",
  "name": "Enterprise Model Composition Ontology",
  "version": "1.0.0",
  "dateCreated": "2026-02-02",
  "description": "Defines how to compose enterprise models by selecting and connecting ontologies based on PFC/PFI context, product scope, ORG-Context (client), and requirement categories. Acts as the 'wiring diagram' for building tech-agnostic data and information models.",
  "conformsTo": "pf:OAA-ONT-v5.0",
  "purpose": "Enable high-level scoping of requirements to automatically determine which ontologies to connect for a given enterprise model configuration",

  "scopingDimensions": {
    "@type": "emc:ScopingFramework",
    "description": "Four dimensions that determine ontology composition",
    "dimensions": [
      {
        "@id": "emc:dim:context-level",
        "name": "Context Level",
        "description": "PFC (Platform Foundation Core) vs PFI (Platform Foundation Instance)",
        "values": [
          {"code": "PFC", "name": "Platform Foundation Core", "description": "Core ontology schemas and templates"},
          {"code": "PFI", "name": "Platform Foundation Instance", "description": "Product/client-specific implementations"}
        ],
        "determines": ["Which ontology layer to access", "Template vs Instance data"]
      },
      {
        "@id": "emc:dim:product-context",
        "name": "Product Context",
        "description": "Specific product or solution being modeled",
        "examples": ["BAIV-AIV", "Custom-Product"],
        "determines": ["Product-specific ontology instances", "Domain customizations"]
      },
      {
        "@id": "emc:dim:org-context",
        "name": "Organization Context",
        "description": "Client's organizational profile and maturity",
        "attributes": ["orgSize", "orgMaturity", "industryVertical", "productPortfolio", "governanceModel"],
        "determines": ["Role applicability", "Process complexity", "Maturity-appropriate ontologies"]
      },
      {
        "@id": "emc:dim:requirement-scope",
        "name": "Requirement Scope",
        "description": "Category of requirements being addressed",
        "determines": ["Which ontology series to activate", "Dependency chain"]
      }
    ]
  },

  "requirementCategories": {
    "@type": "emc:RequirementTaxonomy",
    "description": "High-level requirement categories that map to ontology compositions",
    "categories": [
      {
        "@id": "emc:req:strategic-planning",
        "code": "STRATEGIC",
        "name": "Strategic Planning & Alignment",
        "description": "Vision, strategy, objectives, and organizational alignment",
        "useCases": ["Corporate strategy", "OKR planning", "KPI frameworks", "Strategic roadmaps"],
        "ontologyComposition": {
          "required": ["pf:ORG-ONT", "pf:VE-VSOM-ONT", "pf:VE-OKR-ONT"],
          "recommended": ["pf:VE-KPI-ONT", "pf:VE-RRR-ONT"],
          "optional": ["pf:ORG-MAT-ONT"]
        }
      },
      {
        "@id": "emc:req:product-development",
        "code": "PRODUCT",
        "name": "Product Development & Go-to-Market",
        "description": "Value proposition, product-market fit, feature development",
        "useCases": ["Product strategy", "Feature prioritization", "Market validation", "Launch planning"],
        "ontologyComposition": {
          "required": ["pf:VE-VP-ONT", "pf:VE-PMF-ONT", "pf:PE-EFS-ONT"],
          "recommended": ["pf:VE-RRR-ONT", "pf:CA-ONT", "pf:CL-ONT"],
          "optional": ["pf:GA-ONT"]
        }
      },
      {
        "@id": "emc:req:project-management",
        "code": "PPM",
        "name": "Portfolio, Program & Project Management",
        "description": "Project execution, resource management, delivery tracking",
        "useCases": ["Portfolio prioritization", "Program governance", "Project planning", "Agile delivery"],
        "ontologyComposition": {
          "required": ["pf:PE-PPM-ONT", "pf:PE-EFS-ONT", "pf:PE-Process-Engr-ONT"],
          "recommended": ["pf:VE-RRR-ONT", "pf:VE-OKR-ONT"],
          "optional": ["pf:VE-KPI-ONT"]
        }
      },
      {
        "@id": "emc:req:competitive-intelligence",
        "code": "COMPETITIVE",
        "name": "Competitive Intelligence & Analysis",
        "description": "Market landscape, competitor analysis, gap identification",
        "useCases": ["Market research", "Competitive positioning", "SWOT analysis", "Opportunity identification"],
        "ontologyComposition": {
          "required": ["pf:CL-ONT", "pf:CA-ONT", "pf:GA-ONT"],
          "recommended": ["pf:VE-VP-ONT"],
          "optional": ["pf:VE-PMF-ONT"]
        }
      },
      {
        "@id": "emc:req:organization-design",
        "code": "ORG-DESIGN",
        "name": "Organization Design & Governance",
        "description": "Roles, responsibilities, RACI, RBAC, organizational structure",
        "useCases": ["Role definition", "RACI matrices", "Access control", "Team structure"],
        "ontologyComposition": {
          "required": ["pf:ORG-ONT", "pf:ORG-MAT-ONT", "pf:VE-RRR-ONT"],
          "recommended": ["pf:VE-VSOM-ONT"],
          "optional": ["pf:ORG-CONTEXT-ONT"]
        }
      },
      {
        "@id": "emc:req:process-engineering",
        "code": "PROCESS",
        "name": "Process Engineering & Automation",
        "description": "Process design, AI augmentation, workflow orchestration",
        "useCases": ["Process optimization", "AI agent design", "Workflow automation", "Value chain analysis"],
        "ontologyComposition": {
          "required": ["pf:PE-Process-Engr-ONT"],
          "recommended": ["pf:PE-PPM-ONT", "pf:VE-RRR-ONT"],
          "optional": ["pf:VE-KPI-ONT"]
        }
      },
      {
        "@id": "emc:req:full-enterprise",
        "code": "ENTERPRISE",
        "name": "Full Enterprise Model",
        "description": "Complete enterprise architecture with all ontology series",
        "useCases": ["Digital transformation", "Enterprise architecture", "Platform development"],
        "ontologyComposition": {
          "required": ["pf:ORG-ONT", "pf:ORG-CONTEXT-ONT", "pf:VE-VSOM-ONT", "pf:VE-OKR-ONT", "pf:VE-VP-ONT", "pf:VE-PMF-ONT", "pf:VE-RRR-ONT", "pf:PE-Process-Engr-ONT", "pf:PE-PPM-ONT", "pf:PE-EFS-ONT"],
          "recommended": ["pf:CL-ONT", "pf:CA-ONT", "pf:GA-ONT", "pf:ORG-MAT-ONT"],
          "optional": ["Domain-specific ontologies"]
        }
      },
      {
        "@id": "emc:req:agentic-build",
        "code": "AGENTIC",
        "name": "Agentic AI Solution Build",
        "description": "AI-augmented solutions using ontologies as tech-agnostic layer",
        "useCases": ["AI agent development", "Ontology-driven apps", "Graph-based solutions"],
        "ontologyComposition": {
          "required": ["pf:PE-Process-Engr-ONT", "pf:PE-EFS-ONT", "pf:VE-RRR-ONT"],
          "recommended": ["pf:VE-VP-ONT", "pf:PE-PPM-ONT"],
          "optional": ["All VE-Series for context"],
          "specialRequirements": ["AI Agent definitions", "Process orchestration patterns", "Graph composition rules"]
        }
      }
    ]
  },

  "ontologyRegistry": {
    "@type": "emc:OntologyRegistry",
    "description": "Complete registry of available ontologies with metadata",
    "series": [
      {
