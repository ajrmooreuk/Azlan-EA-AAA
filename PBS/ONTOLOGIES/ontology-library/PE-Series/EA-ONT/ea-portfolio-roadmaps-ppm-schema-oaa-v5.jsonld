  "@id": "ppm:PortfolioProgrammeProjectOntology",
  "@type": "DefinedTermSet",
  "name": "Portfolio-Programme-Project Management Ontology",
  "description": "Enterprise Architecture portfolio management ontology for initiative tracking, dependency management, strategic pillar alignment, practice area assignment, benefit and effort metrics, and value realisation across multi-year transformation horizons.",
  "version": "2.0.0",
  "oaa:version": "6.1.0",
  "dateCreated": "2026-01-31",
  "dateModified": "2026-02-07",
  "creator": {
    "@type": "Organization",
    "@id": "ppm:AzlanEAAA"
  },

  "hasDefinedTerm": [
    {
      "@id": "ppm:Portfolio",
      "@type": "DefinedTerm",
      "name": "Portfolio",
      "description": "Collection of programmes delivering strategic vision within an investment envelope, representing the highest level of organisational investment management with defined governance and resource boundaries.",
      "ppm:properties": [
        {"@id": "ppm:prop-portfolio-name", "@type": "PropertyValue", "name": "name", "description": "Portfolio name identifying the strategic investment grouping"},
        {"@id": "ppm:prop-portfolio-vision", "@type": "PropertyValue", "name": "vision", "description": "Reference to the strategic vision this portfolio realises"},
        {"@id": "ppm:prop-portfolio-horizon", "@type": "PropertyValue", "name": "horizon", "description": "Portfolio time horizon as ISO 8601 duration (e.g., P3Y)", "valueReference": "xsd:duration"},
        {"@id": "ppm:prop-portfolio-investmentEnvelope", "@type": "PropertyValue", "name": "investmentEnvelope", "description": "Total investment budget boundary for the portfolio"},
        {"@id": "ppm:prop-portfolio-valueTarget", "@type": "PropertyValue", "name": "valueTarget", "description": "Target value outcome for the portfolio investment"},
        {"@id": "ppm:prop-portfolio-governanceModel", "@type": "PropertyValue", "name": "governanceModel", "description": "Governance structure overseeing portfolio execution"}
      ]
    },
    {
      "@id": "ppm:Programme",
      "@type": "DefinedTerm",
      "name": "Programme",
      "description": "Coherent set of initiatives delivering programme benefits aligned to a strategic pillar, coordinating cross-initiative dependencies and shared resources to achieve transformational outcomes.",
      "ppm:properties": [
        {"@id": "ppm:prop-programme-name", "@type": "PropertyValue", "name": "name", "description": "Programme name describing the transformation domain"},
        {"@id": "ppm:prop-programme-strategicPillar", "@type": "PropertyValue", "name": "strategicPillar", "description": "Strategic pillar this programme aligns to"},
        {"@id": "ppm:prop-programme-benefitProfile", "@type": "PropertyValue", "name": "benefitProfile", "description": "Expected benefits profile for programme delivery"},
        {"@id": "ppm:prop-programme-contributionWeight", "@type": "PropertyValue", "name": "contributionWeight", "description": "Weighted contribution to portfolio target value (0.0–1.0)", "valueReference": "xsd:decimal"},
        {"@id": "ppm:prop-programme-owner", "@type": "PropertyValue", "name": "owner", "description": "Programme sponsor or accountable executive"},
        {"@id": "ppm:prop-programme-status", "@type": "PropertyValue", "name": "status", "description": "Current programme lifecycle status", "valueReference": "ppm:ProgrammeStatus"}
      ]
    },
    {
      "@id": "ppm:Initiative",
      "@type": "DefinedTerm",
      "name": "Initiative",
      "description": "Discrete transformation initiative with defined outcomes, dependencies, timeline, and resource requirements that contributes to programme-level benefits realisation within the portfolio.",
      "ppm:properties": [
        {"@id": "ppm:prop-initiative-code", "@type": "PropertyValue", "name": "code", "description": "Unique initiative code for tracking (e.g., DA-001)", "valueReference": "xsd:string"},
        {"@id": "ppm:prop-initiative-name", "@type": "PropertyValue", "name": "name", "description": "Initiative name describing the transformation effort"},
        {"@id": "ppm:prop-initiative-phase", "@type": "PropertyValue", "name": "phase", "description": "Target delivery phase from the portfolio horizon", "valueReference": "ppm:Phase"},
        {"@id": "ppm:prop-initiative-status", "@type": "PropertyValue", "name": "status", "description": "Current lifecycle status of the initiative", "valueReference": "ppm:InitiativeStatus"},
        {"@id": "ppm:prop-initiative-priority", "@type": "PropertyValue", "name": "priority", "description": "Priority level for resource allocation decisions", "valueReference": "ppm:Priority"},
        {"@id": "ppm:prop-initiative-valueEstimate", "@type": "PropertyValue", "name": "valueEstimate", "description": "Estimated annual benefit value from initiative delivery"},
        {"@id": "ppm:prop-initiative-effortEstimate", "@type": "PropertyValue", "name": "effortEstimate", "description": "Estimated effort in person-days for delivery", "valueReference": "xsd:integer"},
        {"@id": "ppm:prop-initiative-percentComplete", "@type": "PropertyValue", "name": "percentComplete", "description": "Delivery progress as decimal (0.0–1.0)", "valueReference": "xsd:decimal"},
        {"@id": "ppm:prop-initiative-startDate", "@type": "PropertyValue", "name": "startDate", "description": "Planned or actual start date of the initiative"},
        {"@id": "ppm:prop-initiative-endDate", "@type": "PropertyValue", "name": "endDate", "description": "Planned or actual end date of the initiative"},
        {"@id": "ppm:prop-initiative-owner", "@type": "PropertyValue", "name": "owner", "description": "Initiative lead or accountable project manager"},
        {"@id": "ppm:prop-initiative-tags", "@type": "PropertyValue", "name": "tags", "description": "Classification tags for filtering and grouping", "valueReference": "xsd:string"}
      ]
    },
    {
      "@id": "ppm:Workstream",
      "@type": "DefinedTerm",
      "name": "Workstream",
      "description": "Sub-component of an initiative for complex delivery, representing a self-contained work package within a larger initiative that can be independently managed by a dedicated team.",
      "ppm:properties": [
        {"@id": "ppm:prop-workstream-name", "@type": "PropertyValue", "name": "name", "description": "Workstream name describing the work package"},
        {"@id": "ppm:prop-workstream-team", "@type": "PropertyValue", "name": "team", "description": "Team responsible for workstream delivery"},
        {"@id": "ppm:prop-workstream-status", "@type": "PropertyValue", "name": "status", "description": "Current workstream delivery status", "valueReference": "ppm:InitiativeStatus"}
      ]
    },
    {
      "@id": "ppm:Dependency",
      "@type": "DefinedTerm",
      "name": "Dependency",
      "description": "Typed relationship between initiatives defining sequencing and enablement constraints, capturing predecessor-successor links with classification and critical path indicators.",
      "ppm:properties": [
        {"@id": "ppm:prop-dependency-type", "@type": "PropertyValue", "name": "dependencyType", "description": "Classification of the dependency relationship", "valueReference": "ppm:DependencyType"},
        {"@id": "ppm:prop-dependency-lag", "@type": "PropertyValue", "name": "lag", "description": "Time lag between predecessor and successor events"},
        {"@id": "ppm:prop-dependency-isCriticalPath", "@type": "PropertyValue", "name": "isCriticalPath", "description": "Whether this dependency is on the critical path", "valueReference": "xsd:boolean"},
        {"@id": "ppm:prop-dependency-description", "@type": "PropertyValue", "name": "description", "description": "Free-text description of the dependency rationale"}
      ]
    },
    {
      "@id": "ppm:Milestone",
      "@type": "DefinedTerm",
      "name": "Milestone",
      "description": "Significant achievement point within an initiative marking delivery progress, representing a gate or checkpoint with defined success criteria and a target date.",
      "ppm:properties": [
        {"@id": "ppm:prop-milestone-name", "@type": "PropertyValue", "name": "name", "description": "Milestone name describing the achievement point"},
        {"@id": "ppm:prop-milestone-targetDate", "@type": "PropertyValue", "name": "targetDate", "description": "Target date for milestone achievement"},
        {"@id": "ppm:prop-milestone-successCriteria", "@type": "PropertyValue", "name": "successCriteria", "description": "Criteria that must be met for milestone completion"},
        {"@id": "ppm:prop-milestone-isGate", "@type": "PropertyValue", "name": "isGate", "description": "Whether milestone is a governance gate requiring approval", "valueReference": "xsd:boolean"},
        {"@id": "ppm:prop-milestone-status", "@type": "PropertyValue", "name": "status", "description": "Current milestone completion status", "valueReference": "ppm:InitiativeStatus"}
      ]
    },
    {
      "@id": "ppm:PracticeArea",
      "@type": "DefinedTerm",
      "name": "PracticeArea",
      "description": "Business unit or advisory practice contributing to the transformation portfolio, representing an organisational capability area with manual reduction targets and resource allocations.",
      "ppm:properties": [
        {"@id": "ppm:prop-practicearea-name", "@type": "PropertyValue", "name": "name", "description": "Practice area name (e.g., Advisory, Audit, Tax)"},
        {"@id": "ppm:prop-practicearea-manualReductionTarget", "@type": "PropertyValue", "name": "manualReductionTarget", "description": "Target manual process reduction (0.0–1.0)", "valueReference": "xsd:decimal"},
        {"@id": "ppm:prop-practicearea-headcount", "@type": "PropertyValue", "name": "headcount", "description": "Number of staff in the practice area"},
        {"@id": "ppm:prop-practicearea-practiceHead", "@type": "PropertyValue", "name": "practiceHead", "description": "Leader or head of the practice area"}
      ]
    },
    {
      "@id": "ppm:BenefitMetric",
      "@type": "DefinedTerm",
      "name": "BenefitMetric",
      "description": "Quantified benefit measurement with baseline, target, and actual values for tracking initiative value realisation against planned outcomes and strategic targets.",
      "ppm:properties": [
        {"@id": "ppm:prop-benefitmetric-name", "@type": "PropertyValue", "name": "name", "description": "Benefit metric name (e.g., Revenue Uplift, Cost Reduction)"},
        {"@id": "ppm:prop-benefitmetric-target", "@type": "PropertyValue", "name": "target", "description": "Target value for the benefit metric"},
        {"@id": "ppm:prop-benefitmetric-baseline", "@type": "PropertyValue", "name": "baseline", "description": "Baseline value before initiative delivery"},
        {"@id": "ppm:prop-benefitmetric-actual", "@type": "PropertyValue", "name": "actual", "description": "Actual measured value of the benefit"},
        {"@id": "ppm:prop-benefitmetric-unit", "@type": "PropertyValue", "name": "unit", "description": "Unit of measurement (e.g., GBP, %, hours)"},
        {"@id": "ppm:prop-benefitmetric-measurementFrequency", "@type": "PropertyValue", "name": "measurementFrequency", "description": "How often the metric is measured (e.g., monthly, quarterly)"}
      ]
    },
    {
      "@id": "ppm:EffortMetric",
      "@type": "DefinedTerm",
      "name": "EffortMetric",
      "description": "Resource consumption measurement tracking estimated versus actual effort for initiatives, enabling capacity planning and delivery forecasting across the portfolio.",
      "ppm:properties": [
        {"@id": "ppm:prop-effortmetric-name", "@type": "PropertyValue", "name": "name", "description": "Effort metric name (e.g., Development Days, Consulting Hours)"},
        {"@id": "ppm:prop-effortmetric-estimate", "@type": "PropertyValue", "name": "estimate", "description": "Estimated effort for the work"},
        {"@id": "ppm:prop-effortmetric-actual", "@type": "PropertyValue", "name": "actual", "description": "Actual effort consumed"},
        {"@id": "ppm:prop-effortmetric-unit", "@type": "PropertyValue", "name": "unit", "description": "Unit of effort measurement (e.g., person-days, hours)"}
      ]
    },
    {
      "@id": "ppm:Risk",
      "@type": "DefinedTerm",
      "name": "Risk",
      "description": "Identified risk to initiative delivery with probability, impact assessment, and mitigation strategy, tracked within the RAID log for active risk management.",
      "ppm:properties": [
        {"@id": "ppm:prop-risk-name", "@type": "PropertyValue", "name": "name", "description": "Risk name or short description"},
        {"@id": "ppm:prop-risk-probability", "@type": "PropertyValue", "name": "probability", "description": "Likelihood of risk materialising (Low/Medium/High/Critical)"},
        {"@id": "ppm:prop-risk-impact", "@type": "PropertyValue", "name": "impact", "description": "Impact severity if risk materialises (Low/Medium/High/Critical)"},
        {"@id": "ppm:prop-risk-mitigation", "@type": "PropertyValue", "name": "mitigation", "description": "Planned mitigation actions to reduce risk exposure"},
        {"@id": "ppm:prop-risk-owner", "@type": "PropertyValue", "name": "owner", "description": "Person accountable for risk mitigation"},
        {"@id": "ppm:prop-risk-status", "@type": "PropertyValue", "name": "status", "description": "Current risk status (Open/Mitigated/Closed/Accepted)"}
      ]
    }
  ],

  "ppm:enumerations": [
    {
      "@id": "ppm:Phase",
      "@type": "DefinedTermSet",
      "name": "Initiative Phase",
      "description": "Temporal phases for initiative scheduling across 3-year transformation horizon",
      "hasDefinedTerm": [
        {"@id": "ppm:phase/foundation", "name": "Foundation", "ppm:startDate": "2026-02-01", "ppm:endDate": "2026-04-30"},
        {"@id": "ppm:phase/y1q2", "name": "Year 1 Q2", "ppm:startDate": "2026-05-01", "ppm:endDate": "2026-07-31"},
        {"@id": "ppm:phase/y1q3", "name": "Year 1 Q3", "ppm:startDate": "2026-08-01", "ppm:endDate": "2026-10-31"},
        {"@id": "ppm:phase/y1q4", "name": "Year 1 Q4", "ppm:startDate": "2026-11-01", "ppm:endDate": "2027-01-31"},
        {"@id": "ppm:phase/y2q1", "name": "Year 2 Q1", "ppm:startDate": "2027-02-01", "ppm:endDate": "2027-04-30"},
        {"@id": "ppm:phase/y2q2", "name": "Year 2 Q2", "ppm:startDate": "2027-05-01", "ppm:endDate": "2027-07-31"},
        {"@id": "ppm:phase/y2q3", "name": "Year 2 Q3", "ppm:startDate": "2027-08-01", "ppm:endDate": "2027-10-31"},
        {"@id": "ppm:phase/y2q4", "name": "Year 2 Q4", "ppm:startDate": "2027-11-01", "ppm:endDate": "2028-01-31"},
        {"@id": "ppm:phase/y3q1", "name": "Year 3 Q1", "ppm:startDate": "2028-02-01", "ppm:endDate": "2028-04-30"},
        {"@id": "ppm:phase/y3q2", "name": "Year 3 Q2", "ppm:startDate": "2028-05-01", "ppm:endDate": "2028-07-31"},
        {"@id": "ppm:phase/y3q3", "name": "Year 3 Q3", "ppm:startDate": "2028-08-01", "ppm:endDate": "2028-10-31"},
        {"@id": "ppm:phase/y3q4", "name": "Year 3 Q4", "ppm:startDate": "2028-11-01", "ppm:endDate": "2029-01-31"}
      ]
    },
    {
      "@id": "ppm:InitiativeStatus",
      "@type": "DefinedTermSet",
      "name": "Initiative Status",
      "description": "Lifecycle status values for initiative tracking from proposal through completion",
      "hasDefinedTerm": [
        {"@id": "ppm:status/proposed", "name": "Proposed", "description": "Initiative identified, not yet approved"},
        {"@id": "ppm:status/approved", "name": "Approved", "description": "Approved for delivery, not yet started"},
        {"@id": "ppm:status/in-progress", "name": "In Progress", "description": "Active delivery underway with resources allocated"},
        {"@id": "ppm:status/on-hold", "name": "On Hold", "description": "Paused pending resolution of blocking issue"},
        {"@id": "ppm:status/completed", "name": "Completed", "description": "Delivery complete, benefits realising"},
        {"@id": "ppm:status/cancelled", "name": "Cancelled", "description": "Initiative terminated, resources released"}
      ]
    },
    {
      "@id": "ppm:Priority",
      "@type": "DefinedTermSet",
      "name": "Priority Level",
      "description": "Initiative priority levels for resource allocation and sequencing decisions",
      "hasDefinedTerm": [
        {"@id": "ppm:priority/critical", "name": "Critical", "ppm:rank": 1, "description": "Must deliver, blocks portfolio progress"},
        {"@id": "ppm:priority/high", "name": "High", "ppm:rank": 2, "description": "Important, significant value contribution"},
        {"@id": "ppm:priority/medium", "name": "Medium", "ppm:rank": 3, "description": "Valuable, can flex timing if constrained"},
        {"@id": "ppm:priority/low", "name": "Low", "ppm:rank": 4, "description": "Nice to have, defer if resource constrained"}
      ]
    },
    {
      "@id": "ppm:DependencyType",
      "@type": "DefinedTermSet",
      "name": "Dependency Type",
      "description": "Classification of inter-initiative dependency relationships for scheduling",
      "hasDefinedTerm": [
        {"@id": "ppm:dep-type/finish-to-start", "name": "Finish to Start", "ppm:notation": "FS", "description": "Successor cannot start until predecessor finishes"},
        {"@id": "ppm:dep-type/start-to-start", "name": "Start to Start", "ppm:notation": "SS", "description": "Successor cannot start until predecessor starts"},
        {"@id": "ppm:dep-type/finish-to-finish", "name": "Finish to Finish", "ppm:notation": "FF", "description": "Successor cannot finish until predecessor finishes"},
        {"@id": "ppm:dep-type/enables", "name": "Enables", "ppm:notation": "EN", "description": "Predecessor creates capability successor requires"},
        {"@id": "ppm:dep-type/blocks", "name": "Blocks", "ppm:notation": "BL", "description": "Predecessor must complete before successor viable"},
        {"@id": "ppm:dep-type/informed-by", "name": "Informed By", "ppm:notation": "IB", "description": "Soft dependency, successor benefits from predecessor output"}
      ]
    },
    {
      "@id": "ppm:ProgrammeStatus",
      "@type": "DefinedTermSet",
      "name": "Programme Status",
      "description": "Programme lifecycle status values from initial definition through closure",
      "hasDefinedTerm": [
        {"@id": "ppm:prog-status/defining", "name": "Defining", "description": "Programme scope and benefits being defined"},
        {"@id": "ppm:prog-status/approved", "name": "Approved", "description": "Programme approved for delivery and funded"},
        {"@id": "ppm:prog-status/delivering", "name": "Delivering", "description": "Active delivery of programme initiatives"},
        {"@id": "ppm:prog-status/closing", "name": "Closing", "description": "Programme winding down, benefits handover"},
        {"@id": "ppm:prog-status/closed", "name": "Closed", "description": "Programme closed, all benefits realised or transferred"}
      ]
    }
  ],

