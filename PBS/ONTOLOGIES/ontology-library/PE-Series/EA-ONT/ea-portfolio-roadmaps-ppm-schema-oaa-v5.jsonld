  "businessRules": [
    {
      "@id": "ppm:rule-portfolio-must-have-programme",
      "name": "PortfolioMustHaveProgramme",
      "description": "Every Portfolio must contain at least one Programme to constitute a governed investment grouping",
      "condition": "IF ppm:Portfolio exists",
      "action": "THEN COUNT(ppm:hasProgramme) >= 1",
      "priority": 1,
      "severity": "error",
      "enforcementLevel": "mandatory"
    },
    {
      "@id": "ppm:rule-programme-must-belong-to-portfolio",
      "name": "ProgrammeMustBelongToPortfolio",
      "description": "Every Programme must belong to exactly one Portfolio for investment governance",
      "condition": "IF ppm:Programme exists",
      "action": "THEN ppm:belongsToPortfolio IS NOT NULL AND COUNT(ppm:belongsToPortfolio) = 1",
      "priority": 1,
      "severity": "error",
