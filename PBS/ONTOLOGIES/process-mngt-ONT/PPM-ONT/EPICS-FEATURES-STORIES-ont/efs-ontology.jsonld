      "efs:moduleBinding": ["efs:BacklogManagement"],
      "efs:properties": [
        {
          "@id": "efs:backlogItemId",
          "@type": "PropertyValue",
          "name": "Backlog Item ID",
          "description": "Unique identifier within the backlog system",
          "valueReference": "xsd:string"
        },
        {
          "@id": "efs:priority",
          "@type": "PropertyValue", 
          "name": "Priority",
          "description": "Relative importance for scheduling",
          "valueReference": "efs:PriorityLevel"
        },
        {
          "@id": "efs:status",
          "@type": "PropertyValue",
          "name": "Status",
          "description": "Current state in the workflow",
          "valueReference": "efs:BacklogItemStatus"
        },
        {
