          "@type": "QuantitativeValue",
          "name": "Estimate",
          "description": "Effort estimation in chosen unit"
        },
        {
          "@id": "efs:valueScore",
          "@type": "QuantitativeValue",
          "name": "Value Score",
          "description": "Quantified business value contribution"
        },
        {
          "@id": "efs:riskScore",
          "@type": "QuantitativeValue",
          "name": "Risk Score",
          "description": "Implementation risk assessment"
        }
      ]
    },

