  "efs:businessRules": [
    {
      "@id": "efs:BR-001",
      "@type": "Action",
      "name": "Epic Must Have Features",
      "description": "An Epic in Ready status must have at least one Feature defined",
      "efs:rule": "IF BacklogItem.@type = 'Epic' AND status = 'Ready' THEN hasFeature.length >= 1",
      "efs:priority": 1,
      "efs:severity": "error",
      "efs:affectedEntities": ["efs:Epic", "efs:Feature"]
    },
    {
      "@id": "efs:BR-002",
      "@type": "Action",
      "name": "Story Requires Persona",
      "description": "A User Story must specify the persona (As A...)",
      "efs:rule": "IF BacklogItem.@type = 'UserStory' THEN asA IS NOT NULL",
      "efs:priority": 1,
      "efs:severity": "error",
      "efs:affectedEntities": ["efs:UserStory", "efs:Persona"]
    },
    {
      "@id": "efs:BR-003",
      "@type": "Action",
      "name": "Story Requires Desire",
      "description": "A User Story must specify the desire (I Want...)",
      "efs:rule": "IF BacklogItem.@type = 'UserStory' THEN iWant IS NOT NULL",
      "efs:priority": 1,
      "efs:severity": "error",
      "efs:affectedEntities": ["efs:UserStory"]
    },
    {
      "@id": "efs:BR-004",
      "@type": "Action",
      "name": "Story Requires Benefit",
      "description": "A User Story must specify the benefit (So That...)",
      "efs:rule": "IF BacklogItem.@type = 'UserStory' THEN soThat IS NOT NULL",
      "efs:priority": 1,
      "efs:severity": "error",
      "efs:affectedEntities": ["efs:UserStory"]
    },
    {
      "@id": "efs:BR-005",
      "@type": "Action",
      "name": "Acceptance Criteria Format",
      "description": "Acceptance Criteria must follow Given-When-Then format",
      "efs:rule": "IF AcceptanceCriterion THEN given IS NOT NULL AND when IS NOT NULL AND then IS NOT NULL",
      "efs:priority": 1,
      "efs:severity": "error",
      "efs:affectedEntities": ["efs:AcceptanceCriterion"]
    },
    {
      "@id": "efs:BR-006",
      "@type": "Action",
      "name": "Feature Requires Acceptance Criteria",
      "description": "A Feature must have at least one Acceptance Criterion",
      "efs:rule": "IF BacklogItem.@type = 'Feature' THEN acceptanceCriteria.length >= 1",
      "efs:priority": 1,
      "efs:severity": "error",
      "efs:affectedEntities": ["efs:Feature", "efs:AcceptanceCriterion"]
    },
    {
      "@id": "efs:BR-007",
      "@type": "Action",
      "name": "Hypothesis Requires Success Criteria",
      "description": "A Hypothesis must have measurable success criteria",
      "efs:rule": "IF Hypothesis THEN successCriteria.length >= 1",
      "efs:priority": 1,
      "efs:severity": "error",
      "efs:affectedEntities": ["efs:Hypothesis", "efs:AcceptanceCriterion"]
    },
    {
      "@id": "efs:BR-008",
      "@type": "Action",
      "name": "Release Must Have Features",
      "description": "A Release must include at least one Feature",
      "efs:rule": "IF Release THEN includedFeatures.length >= 1",
      "efs:priority": 1,
      "efs:severity": "error",
      "efs:affectedEntities": ["efs:Release", "efs:Feature"]
    },
    {
      "@id": "efs:BR-009",
      "@type": "Action",
      "name": "Sprint Goal Required",
      "description": "A Sprint must have a defined goal",
      "efs:rule": "IF Sprint THEN sprintGoal IS NOT NULL",
      "efs:priority": 2,
      "efs:severity": "warning",
      "efs:affectedEntities": ["efs:Sprint"]
    },
    {
      "@id": "efs:BR-010",
      "@type": "Action",
      "name": "Dependency Cannot Self-Reference",
      "description": "A Dependency cannot have the same source and target",
      "efs:rule": "IF Dependency THEN sourceItem != targetItem",
      "efs:priority": 1,
      "efs:severity": "error",
      "efs:affectedEntities": ["efs:Dependency"]
    },
    {
      "@id": "efs:BR-011",
      "@type": "Action",
      "name": "Risk Score Calculation",
      "description": "Risk score is calculated as probability  impact",
      "efs:rule": "IF Risk THEN riskScore = probability * impact",
      "efs:priority": 2,
      "efs:severity": "info",
      "efs:affectedEntities": ["efs:Risk"]
    },
    {
      "@id": "efs:BR-012",
      "@type": "Action",
      "name": "MVP Scope Subset",
      "description": "MVP scope must be a subset of Epic features",
      "efs:rule": "IF Epic.mvpScope THEN mvpScope SUBSET_OF hasFeature",
      "efs:priority": 1,
      "efs:severity": "error",
      "efs:affectedEntities": ["efs:Epic", "efs:Feature"]
    }
  ],

