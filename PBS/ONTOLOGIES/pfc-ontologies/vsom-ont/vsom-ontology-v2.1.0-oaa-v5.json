{
  "@context": {
    "@vocab": "https://schema.org/",
    "oaa": "https://oaa-ontology.org/v5/",
    "rdfs": "http://www.w3.org/2000/01/rdf-schema#",
    "owl": "http://www.w3.org/2002/07/owl#",
    "xsd": "http://www.w3.org/2001/XMLSchema#",
    "vsom": "https://oaa-ontology.org/v5/vsom/",
    "org": "https://oaa-ontology.org/v5/organization/",
    "cl": "https://oaa-ontology.org/v5/competitive-landscape/"
  },
  "@id": "https://oaa-ontology.org/v5/vsom/schema",
  "@type": "owl:Ontology",
  "name": "VSOM Core Capability Ontology",
  "alternateName": "Vision-Strategy-Objectives-Metrics Framework",
  "description": "Comprehensive ontology for Vision, Strategy, Objectives, and Metrics framework. Includes StrategicReviewCycle for iterative feedback from competitive landscape. Business Impact is the Driver, Outcomes the Goal, and Value the Measure.",
  "oaa:schemaVersion": "5.0.0",
  "oaa:moduleVersion": "2.1.0",
  "oaa:previousVersion": "2.0.0",
  "oaa:domain": "Strategic Management, Business Performance",
  "oaa:status": "Production",
  "dateCreated": "2025-11-14",
  "dateModified": "2026-02-01",
  "creator": {
    "@type": "Organization",
    "name": "W4M Core Capability Framework"
  },

  "oaa:imports": [
    {
      "@id": "org:schema",
      "name": "ORG-ONT",
      "version": "2.1.0",
      "importedEntities": ["org:Organization", "org:OrganizationContext"],
      "importedRelationships": ["org:hasContext"]
    },
    {
      "@id": "cl:schema",
      "name": "CL-ONT",
      "version": "1.0.0",
      "importedEntities": ["cl:CompetitiveLandscape"],
      "importedRelationships": []
    }
  ],

  "oaa:joinPatterns": [
    {
      "patternId": "JP-VSOM-001",
      "name": "Org-Context-VSOM Join",
      "description": "Join ORG-ONT Organization to VSOM Framework via OrganizationContext bridge",
      "joinPath": "org:Organization → org:hasContext → org:OrganizationContext → vsom:hasStrategicContext → vsom:VSOMFramework",
      "useCase": "Full organizational strategic context"
    },
    {
      "patternId": "JP-VSOM-002",
      "name": "Strategy-Landscape Iteration",
      "description": "StrategicReviewCycle connects competitive landscape feedback to strategy updates",
      "joinPath": "vsom:StrategicReviewCycle → vsom:reviewsLandscape → cl:CompetitiveLandscape",
      "useCase": "Competitive feedback informs strategic adjustment"
    },
    {
      "patternId": "JP-VSOM-003",
      "name": "Metric-Triggered Review",
      "description": "Metric threshold breach triggers strategic review cycle",
      "joinPath": "vsom:MetricsComponent → vsom:triggersReview → vsom:StrategicReviewCycle",
      "useCase": "Performance-driven strategy iteration"
    }
  ],

  "entities": [
    {
      "@id": "vsom:VSOMFramework",
      "@type": "rdfs:Class",
      "name": "VSOMFramework",
      "rdfs:subClassOf": "schema:Intangible",
      "description": "Complete Vision-Strategy-Objectives-Metrics implementation framework. Driver is BusinessImpact, Goal is Outcomes, Measure is Value. Connected to org:Organization via OrganizationContext bridge.",
      "oaa:properties": [
        {"name": "frameworkId", "type": "xsd:string", "required": true, "schemaOrgMapping": "schema:identifier"},
        {"name": "name", "type": "xsd:string", "required": true, "schemaOrgMapping": "schema:name"},
        {"name": "description", "type": "xsd:string", "required": false, "schemaOrgMapping": "schema:description"},
        {"name": "organizationRef", "type": "xsd:string", "required": true, "description": "Reference to org:Organization @id"},
        {"name": "driver", "type": "xsd:string", "required": true, "default": "BusinessImpact"},
        {"name": "goal", "type": "xsd:string", "required": true, "default": "Outcomes"},
        {"name": "measure", "type": "xsd:string", "required": true, "default": "Value"}
      ]
    },
    {
      "@id": "vsom:VisionComponent",
      "@type": "rdfs:Class",
      "name": "VisionComponent",
      "rdfs:subClassOf": "schema:Thing",
      "description": "Long-term aspirational direction aligned with organizational purpose. Time horizon typically 3-10 years.",
      "oaa:properties": [
        {"name": "visionId", "type": "xsd:string", "required": true, "schemaOrgMapping": "schema:identifier"},
        {"name": "visionStatement", "type": "xsd:string", "required": true, "description": "Aspirational future state description"},
        {"name": "coreValues", "type": "xsd:string", "required": false, "description": "Fundamental organizational beliefs"},
        {"name": "visionHorizon", "type": "xsd:duration", "required": false, "description": "Time horizon for realization"},
        {"name": "aspirationalDirection", "type": "xsd:string", "required": false, "description": "Strategic direction aspired to"},
        {"name": "purposeAlignment", "type": "xsd:string", "required": false, "description": "Alignment with organizational purpose"}
      ]
    },
    {
      "@id": "vsom:StrategyComponent",
      "@type": "rdfs:Class",
      "name": "StrategyComponent",
      "rdfs:subClassOf": "schema:Action",
      "description": "Multi-layer strategic approach: Corporate, Marketing, Operational, Digital. Time horizon typically 1-3 years. Subject to revision via StrategicReviewCycle.",
      "oaa:properties": [
        {"name": "strategyId", "type": "xsd:string", "required": true, "schemaOrgMapping": "schema:identifier"},
        {"name": "name", "type": "xsd:string", "required": true, "schemaOrgMapping": "schema:name"},
        {"name": "strategyType", "type": "xsd:string", "required": true, "enum": ["Corporate", "Marketing", "Operational", "Digital", "AIVisibility", "Growth", "Innovation"]},
        {"name": "strategicThrust", "type": "xsd:string", "required": false, "description": "Primary direction and focus"},
        {"name": "competitiveAdvantage", "type": "xsd:string", "required": false, "description": "Sustainable competitive positioning"},
        {"name": "resourceRequirements", "type": "xsd:decimal", "required": false, "description": "Budget allocation"},
        {"name": "actionStatus", "type": "xsd:string", "required": false, "schemaOrgMapping": "schema:actionStatus"},
        {"name": "versionNumber", "type": "xsd:integer", "required": false, "description": "Strategy version for iteration tracking"}
      ]
    },
    {
      "@id": "vsom:ObjectivesComponent",
      "@type": "rdfs:Class",
      "name": "ObjectivesComponent",
      "rdfs:subClassOf": "schema:Thing",
      "description": "Specific, measurable, achievable, relevant, time-bound goals. Quarterly to annual time horizon.",
      "oaa:properties": [
        {"name": "objectiveId", "type": "xsd:string", "required": true, "schemaOrgMapping": "schema:identifier"},
        {"name": "name", "type": "xsd:string", "required": true, "schemaOrgMapping": "schema:name"},
        {"name": "objectiveType", "type": "xsd:string", "required": true, "enum": ["Strategic", "Tactical", "Operational", "Financial", "Customer", "Learning", "Internal"]},
        {"name": "targetValue", "type": "xsd:decimal", "required": true, "description": "Target measurement"},
        {"name": "baselineValue", "type": "xsd:decimal", "required": false, "description": "Starting measurement"},
        {"name": "deadline", "type": "xsd:date", "required": true, "description": "Target completion date"},
        {"name": "owner", "type": "xsd:string", "required": false, "description": "Accountable person"},
        {"name": "status", "type": "xsd:string", "required": true, "enum": ["NotStarted", "InProgress", "OnTrack", "AtRisk", "Blocked", "Completed", "Cancelled"]},
        {"name": "priority", "type": "xsd:integer", "required": false, "description": "Priority ranking (1=highest)"}
      ]
    },
    {
      "@id": "vsom:MetricsComponent",
      "@type": "rdfs:Class",
      "name": "MetricsComponent",
      "rdfs:subClassOf": "schema:PropertyValue",
      "description": "KPIs, OKRs, and performance indicators measuring value delivery. Threshold breaches can trigger StrategicReviewCycle.",
      "oaa:properties": [
        {"name": "metricId", "type": "xsd:string", "required": true, "schemaOrgMapping": "schema:identifier"},
        {"name": "name", "type": "xsd:string", "required": true, "schemaOrgMapping": "schema:name"},
        {"name": "value", "type": "xsd:decimal", "required": false, "schemaOrgMapping": "schema:value"},
        {"name": "unitCode", "type": "xsd:string", "required": false, "schemaOrgMapping": "schema:unitCode"},
        {"name": "metricType", "type": "xsd:string", "required": true, "enum": ["Leading", "Lagging", "Diagnostic", "Outcome", "Process", "Financial", "Customer", "Operational"]},
        {"name": "measurementFrequency", "type": "xsd:duration", "required": false, "description": "How often measured"},
        {"name": "thresholdCritical", "type": "xsd:decimal", "required": false},
        {"name": "thresholdWarning", "type": "xsd:decimal", "required": false},
        {"name": "thresholdTarget", "type": "xsd:decimal", "required": false},
        {"name": "dataSource", "type": "xsd:string", "required": false, "description": "Source system for data"},
        {"name": "businessImpact", "type": "xsd:string", "required": false, "enum": ["Critical", "High", "Medium", "Low"]}
      ]
    },
    {
      "@id": "vsom:StrategicReviewCycle",
      "@type": "rdfs:Class",
      "name": "StrategicReviewCycle",
      "rdfs:subClassOf": "schema:Event",
      "description": "Captures iteration between competitive landscape context and strategy. Links external market signals to strategic adjustment decisions. Enables feedback loop from CL-ONT to strategy updates.",
      "oaa:properties": [
        {"name": "cycleId", "type": "xsd:string", "required": true, "description": "Unique review cycle identifier"},
        {"name": "reviewDate", "type": "xsd:date", "required": true, "description": "Date of strategic review"},
        {"name": "triggerType", "type": "xsd:string", "required": true, "enum": ["Scheduled", "MetricBreach", "MarketEvent", "CompetitorAction", "OpportunityIdentified", "RiskMaterialized"]},
        {"name": "triggerDescription", "type": "xsd:string", "required": false, "description": "What specifically triggered this review"},
        {"name": "landscapeFindings", "type": "xsd:string", "required": false, "description": "Key insights from competitive landscape review"},
        {"name": "strategyImpact", "type": "xsd:string", "required": true, "enum": ["None", "Minor-Adjustment", "Major-Pivot", "Full-Revision"]},
        {"name": "recommendedActions", "type": "xsd:string", "required": false, "description": "Recommended strategic adjustments"},
        {"name": "decisionOutcome", "type": "xsd:string", "required": false, "enum": ["Approved", "Deferred", "Rejected", "RequiresMoreData"]},
        {"name": "nextReviewDate", "type": "xsd:date", "required": false, "description": "Scheduled next review"}
      ]
    },
    {
      "@id": "vsom:Market",
      "@type": "rdfs:Class",
      "name": "Market",
      "rdfs:subClassOf": "schema:Place",
      "description": "Market classification - vertical or horizontal orientation.",
      "oaa:properties": [
        {"name": "marketId", "type": "xsd:string", "required": true, "schemaOrgMapping": "schema:identifier"},
        {"name": "name", "type": "xsd:string", "required": true, "schemaOrgMapping": "schema:name"},
        {"name": "marketType", "type": "xsd:string", "required": true, "enum": ["Vertical", "Horizontal"]},
        {"name": "industryCode", "type": "xsd:string", "required": false, "description": "ISO industry classification"},
        {"name": "marketSize", "type": "xsd:decimal", "required": false, "description": "Total addressable market"},
        {"name": "growthRate", "type": "xsd:decimal", "required": false, "description": "Annual growth rate %"},
        {"name": "maturityStage", "type": "xsd:string", "required": false, "enum": ["Emerging", "Growing", "Mature", "Declining"]}
      ]
    },
    {
      "@id": "vsom:BusinessModel",
      "@type": "rdfs:Class",
      "name": "BusinessModel",
      "rdfs:subClassOf": "schema:CreativeWork",
      "description": "Adoptable business model framework applicable to client and market contexts.",
      "oaa:properties": [
        {"name": "modelId", "type": "xsd:string", "required": true, "schemaOrgMapping": "schema:identifier"},
        {"name": "name", "type": "xsd:string", "required": true, "schemaOrgMapping": "schema:name"},
        {"name": "description", "type": "xsd:string", "required": false, "schemaOrgMapping": "schema:description"},
        {"name": "modelType", "type": "xsd:string", "required": true, "description": "Business model pattern classification"},
        {"name": "valueProposition", "type": "xsd:string", "required": false, "description": "Core value delivery mechanism"},
        {"name": "revenueStreams", "type": "xsd:string", "required": false, "description": "Revenue generation methods"}
      ]
    },
    {
      "@id": "vsom:BusinessImpact",
      "@type": "rdfs:Class",
      "name": "BusinessImpact",
      "rdfs:subClassOf": "schema:Thing",
      "description": "Driver of all VSOM activities - measures business effect. Role: Primary Driver.",
      "oaa:properties": [
        {"name": "impactId", "type": "xsd:string", "required": true, "schemaOrgMapping": "schema:identifier"},
        {"name": "name", "type": "xsd:string", "required": true, "schemaOrgMapping": "schema:name"},
        {"name": "impactType", "type": "xsd:string", "required": true, "enum": ["Revenue", "Cost", "Risk", "Capability", "Market", "Customer", "Operational"]},
        {"name": "impactMagnitude", "type": "xsd:decimal", "required": false, "description": "Quantified impact measurement"},
        {"name": "impactTimeframe", "type": "xsd:duration", "required": false, "description": "Time to realize impact"},
        {"name": "confidenceLevel", "type": "xsd:integer", "required": false, "description": "Confidence in estimate (0-100%)"}
      ]
    },
    {
      "@id": "vsom:Outcome",
      "@type": "rdfs:Class",
      "name": "Outcome",
      "rdfs:subClassOf": "schema:Thing",
      "description": "Goal of VSOM framework - desired end state. Role: Primary Goal.",
      "oaa:properties": [
        {"name": "outcomeId", "type": "xsd:string", "required": true, "schemaOrgMapping": "schema:identifier"},
        {"name": "name", "type": "xsd:string", "required": true, "schemaOrgMapping": "schema:name"},
        {"name": "outcomeType", "type": "xsd:string", "required": true, "enum": ["Financial", "Customer", "Operational", "Strategic", "Capability", "Market"]},
        {"name": "targetState", "type": "xsd:string", "required": true, "description": "Desired end state description"},
        {"name": "successCriteria", "type": "xsd:string", "required": false, "description": "Criteria for success"},
        {"name": "measurableIndicators", "type": "xsd:string", "required": false, "description": "Quantifiable success indicators"}
      ]
    },
    {
      "@id": "vsom:ValueMeasure",
      "@type": "rdfs:Class",
      "name": "ValueMeasure",
      "rdfs:subClassOf": "schema:PropertyValue",
      "description": "Measurement of value delivered through VSOM implementation. Role: Primary Measure.",
      "oaa:properties": [
        {"name": "measureId", "type": "xsd:string", "required": true, "schemaOrgMapping": "schema:identifier"},
        {"name": "name", "type": "xsd:string", "required": true, "schemaOrgMapping": "schema:name"},
        {"name": "value", "type": "xsd:decimal", "required": false, "schemaOrgMapping": "schema:value"},
        {"name": "valueType", "type": "xsd:string", "required": true, "enum": ["Financial", "Strategic", "Operational", "Customer", "Innovation", "Capability"]},
        {"name": "roi", "type": "xsd:decimal", "required": false, "description": "Return on investment %"}
      ]
    }
  ],

  "relationships": [
