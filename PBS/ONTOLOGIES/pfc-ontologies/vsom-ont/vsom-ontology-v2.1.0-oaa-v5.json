  ],

  "businessRules": [
    {
      "ruleId": "BR-VSOM-001",
      "name": "VSOM Framework Completeness",
      "condition": "IF a VSOMFramework is created",
      "constraint": "THEN the framework MUST have at least one Vision, Strategy, Objective, and Metric component",
      "severity": "error"
    },
    {
      "ruleId": "BR-VSOM-002",
      "name": "Framework Organization Reference",
      "condition": "IF a VSOMFramework is created",
      "constraint": "THEN organizationRef MUST reference a valid org:Organization @id",
      "severity": "error"
    },
    {
      "ruleId": "BR-VSOM-003",
      "name": "Objective Must Have Deadline",
      "condition": "IF an ObjectivesComponent is created",
      "constraint": "THEN deadline MUST be specified",
      "severity": "error"
    },
    {
      "ruleId": "BR-VSOM-004",
      "name": "Metric Must Have Target",
      "condition": "IF a MetricsComponent is created",
      "constraint": "THEN thresholdTarget SHOULD be specified",
      "severity": "warning"
    },
    {
      "ruleId": "BR-VSOM-005",
      "name": "Strategy Alignment",
      "condition": "IF a StrategyComponent exists",
      "constraint": "THEN it MUST have derivesFromVision relationship to VisionComponent",
      "severity": "error"
    },
    {
      "ruleId": "BR-VSOM-006",
      "name": "Objective Tracking",
      "condition": "IF an ObjectivesComponent exists",
      "constraint": "THEN it MUST have at least one trackedByMetric relationship",
      "severity": "error"
    },
    {
      "ruleId": "BR-VSOM-007",
      "name": "Impact-Outcome-Value Chain",
      "condition": "IF BusinessImpact drives Outcome",
      "constraint": "THEN Outcome MUST measure at least one ValueMeasure",
      "severity": "warning"
    },
    {
      "ruleId": "BR-VSOM-008",
      "name": "Review Cycle Requires Landscape",
      "condition": "IF a StrategicReviewCycle has triggerType 'MarketEvent' or 'CompetitorAction' or 'OpportunityIdentified'",
      "constraint": "THEN reviewsLandscape SHOULD reference a CompetitiveLandscape",
      "severity": "warning"
    },
    {
      "ruleId": "BR-VSOM-009",
      "name": "Major Strategy Change Requires Review",
      "condition": "IF a StrategicReviewCycle has strategyImpact 'Major-Pivot' or 'Full-Revision'",
      "constraint": "THEN producesUpdatedStrategy MUST reference a new StrategyComponent",
      "severity": "error"
    },
    {
      "ruleId": "BR-VSOM-010",
      "name": "Metric Breach Requires Review",
      "condition": "IF a MetricsComponent value breaches thresholdCritical",
      "constraint": "THEN a StrategicReviewCycle with triggerType 'MetricBreach' SHOULD be created",
      "severity": "warning"
    }
  ],

