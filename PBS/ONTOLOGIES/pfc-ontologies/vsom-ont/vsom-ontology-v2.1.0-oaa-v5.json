      "@id": "vsom:hasStrategicContext",
      "@type": "owl:ObjectProperty",
      "name": "Has Strategic Context",
      "description": "Links OrganizationContext to VSOM Framework. Bridge pattern from ORG-ONT.",
      "domainIncludes": ["org:OrganizationContext"],
      "rangeIncludes": ["vsom:VSOMFramework"],
      "oaa:cardinality": {"min": 0, "max": 1},
      "oaa:crossOntologyRef": "ORG-ONT"
    },
    {
      "@id": "vsom:frameworkBelongsToContext",
      "@type": "owl:ObjectProperty",
      "name": "Framework Belongs To Context",
      "description": "Inverse: VSOMFramework back to OrganizationContext",
      "domainIncludes": ["vsom:VSOMFramework"],
      "rangeIncludes": ["org:OrganizationContext"],
      "oaa:cardinality": {"min": 1, "max": 1},
      "oaa:inverseOf": "vsom:hasStrategicContext"
    },
    {
      "@id": "vsom:hasVision",
      "@type": "owl:ObjectProperty",
      "name": "Has Vision",
      "description": "Framework has vision component",
      "domainIncludes": ["vsom:VSOMFramework"],
      "rangeIncludes": ["vsom:VisionComponent"],
      "oaa:cardinality": {"min": 1, "max": 1}
    },
    {
      "@id": "vsom:hasStrategy",
      "@type": "owl:ObjectProperty",
      "name": "Has Strategy",
      "description": "Framework has strategy components",
      "domainIncludes": ["vsom:VSOMFramework"],
      "rangeIncludes": ["vsom:StrategyComponent"],
      "oaa:cardinality": {"min": 1, "max": "*"}
    },
    {
      "@id": "vsom:hasObjective",
      "@type": "owl:ObjectProperty",
      "name": "Has Objective",
      "description": "Framework has objectives",
      "domainIncludes": ["vsom:VSOMFramework"],
      "rangeIncludes": ["vsom:ObjectivesComponent"],
      "oaa:cardinality": {"min": 1, "max": "*"}
    },
    {
      "@id": "vsom:hasMetric",
      "@type": "owl:ObjectProperty",
      "name": "Has Metric",
      "description": "Framework has metrics",
      "domainIncludes": ["vsom:VSOMFramework"],
      "rangeIncludes": ["vsom:MetricsComponent"],
      "oaa:cardinality": {"min": 1, "max": "*"}
    },
    {
      "@id": "vsom:hasReviewCycle",
      "@type": "owl:ObjectProperty",
      "name": "Has Review Cycle",
