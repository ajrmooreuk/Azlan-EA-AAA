  "businessRules": [
    {
      "id": "BR-RRR-001",
      "name": "CEO Fallback Rule",
      "description": "CEO is ultimate fallback for any unfilled C-Suite role",
      "severity": "info",
      "condition": "IF ExecutiveRole.isActive = false AND ExecutiveRole.roleCategory contains 'CSuite'",
      "constraint": "THEN CEO assumes accountability until role filled"
    },
    {
      "id": "BR-RRR-002",
      "name": "One Accountable Per Activity",
      "description": "Each activity must have exactly one role marked as Accountable in RACI",
      "severity": "error",
      "condition": "IF Activity has RACIAssignments",
      "constraint": "THEN COUNT(raciType='Accountable') = 1"
    },
    {
      "id": "BR-RRR-003",
      "name": "At Least One Responsible",
      "description": "Each activity must have at least one Responsible role",
      "severity": "error",
      "condition": "IF Activity has RACIAssignments",
      "constraint": "THEN COUNT(raciType='Responsible') >= 1"
    },
    {
      "id": "BR-RRR-004",
      "name": "No Circular Reporting",
      "description": "Reporting relationships must not create cycles",
      "severity": "error",
      "condition": "IF Role.reportsTo chain exists",
      "constraint": "THEN chain MUST NOT contain cycles"
    },
    {
      "id": "BR-RRR-005",
      "name": "CFO Financial Accountability",
      "description": "CFO must be accountable for core financial functions",
      "severity": "warning",
      "condition": "IF CFO role exists",
      "constraint": "THEN CFO.raciAccountable MUST include: Financial reporting, Statutory compliance, Capital allocation, Financial planning"
    },
    {
      "id": "BR-RRR-006",
      "name": "C-Suite Seniority Level",
      "description": "Executive roles in C-Suite categories should have seniorityLevel=1",
      "severity": "warning",
      "condition": "IF ExecutiveRole.roleCategory contains 'CSuite'",
      "constraint": "THEN seniorityLevel = 1"
    },
    {
      "id": "BR-RRR-007",
      "name": "Delegation Requires Accountability",
      "description": "Role can only delegate responsibilities it is accountable for",
      "severity": "error",
      "condition": "IF ExecutiveRole.delegatesTo exists",
      "constraint": "THEN delegationScope MUST be subset of role's coreResponsibilities or raciAccountable"
    },
    {
      "id": "BR-RRR-008",
      "name": "VP-RoleRef Alignment",
      "description": "When VP RoleBasedICP references a role, the role must exist",
      "severity": "error",
      "condition": "IF RoleBasedICP.roleRef exists",
      "constraint": "THEN roleRef MUST reference valid ExecutiveRole or FunctionalRole @id"
    }
  ],
