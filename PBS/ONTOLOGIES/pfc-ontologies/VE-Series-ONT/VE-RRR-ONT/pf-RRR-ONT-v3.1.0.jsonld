{
  "@context": {
    "@vocab": "https://schema.org/",
    "pf": "https://platform-foundation.io/ontology/v1/",
    "raci": "https://platform-foundation.io/ontology/v1/raci/",
    "rbac": "https://platform-foundation.io/ontology/v1/rbac/",
    "rdfs": "http://www.w3.org/2000/01/rdf-schema#",
    "owl": "http://www.w3.org/2002/07/owl#",
    "xsd": "http://www.w3.org/2001/XMLSchema#"
  },
  "@type": "owl:Ontology",
  "@id": "pf:RRR-ONT-v3.1.0",
  "name": "Platform Foundation: Roles, RACI & RBAC Ontology (RRR-ONT)",
  "version": "3.1.0",
  "dateCreated": "2025-10-11",
  "dateModified": "2026-02-02",
  "creator": "Amanda Moore",
  "description": "Comprehensive ontology for organizational roles, RACI accountability framework, and role-based access control (RBAC) for multi-venture platform foundation. v3.1.0 adds C-Suite operational properties for responsibilities, RACI matrices, collaborations, and delegations.",
  "domain": "Organizational Governance, Access Management, Accountability Framework",
  "subDomains": [
    "Executive Leadership Structure",
    "Functional Accountability (RACI)",
    "Role-Based Access Control (RBAC)",
    "Permission & Capability Management",
    "Matrix Organization Modeling",
    "C-Suite Collaboration Patterns"
  ],
  "businessObjectives": [
    "Enable multi-venture role portability",
    "Support matrix management structures",
    "Facilitate AI agent authorization decisions",
    "Ensure RACI accountability clarity",
    "Enable dynamic, context-aware access control",
    "Support organizational scale flexibility (startup to enterprise)",
    "Enable C-Suite collaboration and delegation modeling"
  ],
  "dependencies": [
    {
      "ontologyId": "pf:ontology:individual-v1",
      "reason": "INDIVIDUALS (schema:Person) fill ROLES"
    },
    {
      "ontologyId": "pf:ontology:user-v1",
      "reason": "USERS link to INDIVIDUALS and are governed by RBAC"
    },
    {
      "ontologyId": "pf:ontology:organization-v1",
      "reason": "ORGANIZATIONS contain ROLES and own VSOM Strategy"
    },
    {
      "ontologyId": "pf:ontology:vsom-strategy-v1",
      "reason": "ROLES are accountable for Strategy formulation and implementation"
    },
    {
      "ontologyId": "pf:ontology:vp-v1.2.0",
      "reason": "VP RoleBasedICP links to ExecutiveRole/FunctionalRole via roleRef"
    }
  ],
  "useCases": [
    {
      "id": "UC-001",
      "name": "Multi-Venture Role Assignment",
      "description": "Individual holds different roles across multiple ventures (e.g., CEO of Venture A, Advisor to Venture B, CMO of Venture C)"
    },
    {
      "id": "UC-002",
      "name": "RACI Matrix Generation",
      "description": "For any business process or activity, determine who is Responsible, Accountable, Consulted, and Informed"
    },
    {
      "id": "UC-003",
      "name": "Permission Resolution for Users",
      "description": "AI agent queries: 'Can User X perform Action Y on Resource Z?' based on RBAC policies"
    },
    {
      "id": "UC-004",
      "name": "Organizational Capability Gap Analysis",
      "description": "Identify capability gaps when executive or functional roles are unfilled or understaffed"
    },
    {
      "id": "UC-005",
      "name": "Cross-Functional Collaboration Discovery",
      "description": "Discover collaboration paths and who should be consulted when traversing functional boundaries"
    },
    {
      "id": "UC-006",
      "name": "VP-RRR ICP Integration",
      "description": "Link Value Proposition RoleBasedICP entities to C-Suite roles for hierarchical problem ownership"
    }
  ],
  "entities": [
    {
      "@type": "rdfs:Class",
      "@id": "pf:ExecutiveRole",
      "rdfs:subClassOf": "schema:OrganizationalRole",
      "rdfs:label": "Executive Role",
      "rdfs:comment": "A C-Suite or senior executive position with strategic accountability within an organization. Extended in v3.1.0 with operational properties for responsibilities, RACI, collaborations, and delegations.",
      "schemaOrgAlignment": {
        "baseType": "schema:OrganizationalRole",
        "rationale": "schema:OrganizationalRole provides the foundation for any organizational position, which we extend for executive-specific attributes",
        "extensions": [
          "roleCode",
          "roleCategory",
          "strategicFocus",
          "vsomComponent",
          "bscPerspective",
          "keyFrameworks",
          "primaryMetrics",
          "aiVisibilityRole",
          "seniorityLevel",
          "coreResponsibilities",
          "keyDecisions",
          "raciAccountable",
          "raciResponsible",
          "raciConsulted",
          "raciInformed",
          "raciRules",
          "keyCollaborations",
          "delegatesTo",
          "fallbackRole",
          "isOptional",
          "typicalOrgSize",
          "functionalDomain"
        ],
        "alternativesConsidered": [
          "schema:Role - too generic",
          "schema:EmployeeRole - limited to employment context"
        ]
      },
      "properties": [
        {
          "@id": "pf:roleCode",
          "@type": "rdf:Property",
          "rdfs:label": "Role Code",
          "rdfs:comment": "Short code identifier for the role (e.g., CEO, CMO, CFO)",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "xsd:string",
          "pattern": "^[A-Z]{2,5}$",
          "required": true,
          "example": "CEO"
        },
        {
          "@id": "pf:roleTitle",
          "@type": "rdf:Property",
          "rdfs:label": "Role Title",
          "rdfs:comment": "Full formal title of the executive role",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "xsd:string",
          "required": true,
          "example": "Chief Executive Officer"
        },
        {
          "@id": "pf:roleCategory",
          "@type": "rdf:Property",
          "rdfs:label": "Role Category",
          "rdfs:comment": "Grouping category for the executive role based on functional domain",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "xsd:string",
          "enum": [
            "Core Traditional CSuite",
            "Data Analytics CSuite",
            "Revenue Customer CSuite",
            "Risk Governance CSuite",
            "Strategy Innovation CSuite",
            "People Culture CSuite",
            "Commercial CSuite"
          ],
          "required": true,
          "example": "Core Traditional CSuite"
        },
        {
          "@id": "pf:functionalDomain",
          "@type": "rdf:Property",
          "rdfs:label": "Functional Domain",
          "rdfs:comment": "Primary functional domain this role operates in",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "xsd:string",
          "enum": [
            "Executive Leadership",
            "Finance",
            "Sales & Commercial",
            "Product",
            "Technology",
            "Marketing",
            "Operations",
            "Human Resources",
            "Legal & Compliance",
            "Customer Success",
            "Data & Analytics",
            "Strategy"
          ],
          "required": true,
          "example": "Executive Leadership"
        },
        {
          "@id": "pf:strategicFocus",
          "@type": "rdf:Property",
          "rdfs:label": "Strategic Focus",
          "rdfs:comment": "Primary strategic area of responsibility for this role",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "xsd:string",
          "required": false,
          "example": "Corporate Leadership & Vision"
        },
        {
          "@id": "pf:vsomComponent",
          "@type": "rdf:Property",
          "rdfs:label": "VSOM Component",
          "rdfs:comment": "Alignment with VSOM (Vision, Strategy, Operations, Metrics) framework component",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "xsd:string",
          "required": false,
          "example": "Corporate Vision & Strategy"
        },
        {
          "@id": "pf:bscPerspective",
          "@type": "rdf:Property",
          "rdfs:label": "Balanced Scorecard Perspective",
          "rdfs:comment": "Primary Balanced Scorecard perspective this role aligns with",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "xsd:string",
          "enum": [
            "Financial",
            "Customer",
            "Internal Process",
            "Learning & Growth",
            "Innovation",
            "Technology",
            "Risk/Governance",
            "Stakeholder/ESG",
            "Strategic",
            "Integrated View"
          ],
          "required": false,
          "example": "Integrated View"
        },
        {
          "@id": "pf:keyFrameworks",
          "@type": "rdf:Property",
          "rdfs:label": "Key Frameworks",
          "rdfs:comment": "Management and strategic frameworks typically used by this role",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "xsd:string",
          "cardinality": "0..*",
          "required": false,
          "example": ["Blue Ocean Strategy", "Corporate Strategy", "BSC"]
        },
        {
          "@id": "pf:primaryMetrics",
          "@type": "rdf:Property",
          "rdfs:label": "Primary Metrics",
          "rdfs:comment": "Key Performance Indicators (KPIs) owned or primarily tracked by this role",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "xsd:string",
          "cardinality": "0..*",
          "required": false,
          "example": ["Revenue Growth", "Market Position", "Stakeholder Value"]
        },
        {
          "@id": "pf:aiVisibilityRole",
          "@type": "rdf:Property",
          "rdfs:label": "AI Visibility Role",
          "rdfs:comment": "Description of how this role relates to AI visibility and brand authority strategy",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "xsd:string",
          "required": false,
          "example": "Executive AI Thought Leadership & Strategic Direction"
        },
        {
          "@id": "pf:seniorityLevel",
          "@type": "rdf:Property",
          "rdfs:label": "Seniority Level",
          "rdfs:comment": "Numeric seniority level where 1=C-Suite, 2=VP, 3=Director, etc.",
          "schema:domainIncludes": ["pf:ExecutiveRole", "pf:FunctionalRole"],
          "schema:rangeIncludes": "xsd:integer",
          "minimum": 1,
          "maximum": 10,
          "required": true,
          "example": 1
        },
        {
          "@id": "pf:coreResponsibilities",
          "@type": "rdf:Property",
          "rdfs:label": "Core Responsibilities",
          "rdfs:comment": "Primary responsibilities and accountabilities for this role",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "xsd:string",
          "cardinality": "1..*",
          "required": true,
          "example": ["Company vision and strategic direction", "Executive team leadership"]
        },
        {
          "@id": "pf:keyDecisions",
          "@type": "rdf:Property",
          "rdfs:label": "Key Decisions",
          "rdfs:comment": "Types of decisions this role is authorized to make",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "xsd:string",
          "cardinality": "1..*",
          "required": true,
          "example": ["Company vision, mission, and strategic direction", "Executive leadership team composition"]
        },
        {
          "@id": "pf:raciAccountable",
          "@type": "rdf:Property",
          "rdfs:label": "RACI Accountable",
          "rdfs:comment": "Activities/outcomes for which this role is Accountable (owns the outcome, one per activity)",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "xsd:string",
          "cardinality": "0..*",
          "required": false,
          "example": ["Company vision and strategic direction", "Overall company performance"]
        },
        {
          "@id": "pf:raciResponsible",
          "@type": "rdf:Property",
          "rdfs:label": "RACI Responsible",
          "rdfs:comment": "Activities for which this role is Responsible (does the work)",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "xsd:string",
          "cardinality": "0..*",
          "required": false,
          "example": ["Developing annual strategic plan", "Leading executive team meetings"]
        },
        {
          "@id": "pf:raciConsulted",
          "@type": "rdf:Property",
          "rdfs:label": "RACI Consulted",
          "rdfs:comment": "Activities for which this role should be Consulted (provides input before decisions)",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "xsd:string",
          "cardinality": "0..*",
          "required": false,
          "example": ["Detailed functional strategies", "Technology architecture decisions"]
        },
        {
          "@id": "pf:raciInformed",
          "@type": "rdf:Property",
          "rdfs:label": "RACI Informed",
          "rdfs:comment": "Activities for which this role should be Informed (kept updated after decisions)",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "xsd:string",
          "cardinality": "0..*",
          "required": false,
          "example": ["All C-Suite OKR progress", "Major customer wins or losses"]
        },
        {
          "@id": "pf:raciRules",
          "@type": "rdf:Property",
          "rdfs:label": "RACI Rules",
          "rdfs:comment": "Governance rules and constraints for this role's RACI participation",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "xsd:string",
          "cardinality": "0..*",
          "required": false,
          "example": ["CEO is ultimate fallback for any C-Suite role per BR-RRR-001"]
        },
        {
          "@id": "pf:keyCollaborations",
          "@type": "rdf:Property",
          "rdfs:label": "Key Collaborations",
          "rdfs:comment": "Structured collaboration patterns with other roles",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "pf:RoleCollaboration",
          "cardinality": "0..*",
          "required": false
        },
        {
          "@id": "pf:delegatesTo",
          "@type": "rdf:Property",
          "rdfs:label": "Delegates To",
          "rdfs:comment": "Roles to which this role delegates specific responsibilities",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "pf:RoleDelegation",
          "cardinality": "0..*",
          "required": false
        },
        {
          "@id": "pf:fallbackRole",
          "@type": "rdf:Property",
          "rdfs:label": "Fallback Role",
          "rdfs:comment": "Role that assumes responsibilities if this role is unfilled",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "xsd:string",
          "cardinality": "0..1",
          "required": false,
          "example": "Board Chair (strategic only)"
        },
        {
          "@id": "pf:isOptional",
          "@type": "rdf:Property",
          "rdfs:label": "Is Optional",
          "rdfs:comment": "Whether this role is optional based on organization size/stage",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "xsd:boolean",
          "required": false,
          "default": false
        },
        {
          "@id": "pf:typicalOrgSize",
          "@type": "rdf:Property",
          "rdfs:label": "Typical Organization Size",
          "rdfs:comment": "Organization size range where this role is typically found",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "xsd:string",
          "enum": [
            "any",
            "startup (1-50)",
            "scale-up (50-200)",
            "mid-market (200-1000)",
            "enterprise (1000+)"
          ],
          "required": false,
          "example": "mid-market (200-1000)"
        }
      ]
    },
    {
      "@type": "rdfs:Class",
      "@id": "pf:RoleCollaboration",
      "rdfs:subClassOf": "schema:Thing",
      "rdfs:label": "Role Collaboration",
      "rdfs:comment": "Defines structured collaboration pattern between two roles",
      "properties": [
        {
          "@id": "pf:collaboratesWith",
          "@type": "rdf:Property",
          "rdfs:label": "Collaborates With",
          "rdfs:comment": "The role this collaboration is with",
          "schema:rangeIncludes": "xsd:string",
          "required": true,
          "example": "CFO"
        },
        {
          "@id": "pf:collaborationFocus",
          "@type": "rdf:Property",
          "rdfs:label": "Collaboration Focus",
          "rdfs:comment": "Areas of focus for this collaboration",
          "schema:rangeIncludes": "xsd:string",
          "required": true,
          "example": "Financial strategy, capital allocation, investor relations"
        },
        {
          "@id": "pf:collaborationFrequency",
          "@type": "rdf:Property",
          "rdfs:label": "Collaboration Frequency",
          "rdfs:comment": "How often this collaboration typically occurs",
          "schema:rangeIncludes": "xsd:string",
          "enum": ["Daily", "Weekly", "Bi-weekly", "Monthly", "Quarterly", "As Needed"],
          "required": false,
          "example": "Daily"
        },
        {
          "@id": "pf:decisionAuthority",
          "@type": "rdf:Property",
          "rdfs:label": "Decision Authority",
          "rdfs:comment": "How decisions are made in this collaboration",
          "schema:rangeIncludes": "xsd:string",
          "required": false,
          "example": "CEO decides with CFO input; CFO accountable for execution"
        }
      ]
    },
    {
      "@type": "rdfs:Class",
      "@id": "pf:RoleDelegation",
      "rdfs:subClassOf": "schema:Thing",
      "rdfs:label": "Role Delegation",
      "rdfs:comment": "Defines delegation of responsibilities from one role to another",
      "properties": [
        {
          "@id": "pf:delegateRole",
          "@type": "rdf:Property",
          "rdfs:label": "Delegate Role",
          "rdfs:comment": "The role receiving delegation",
          "schema:rangeIncludes": "xsd:string",
          "required": true,
          "example": "VP Finance"
        },
        {
          "@id": "pf:delegationScope",
          "@type": "rdf:Property",
          "rdfs:label": "Delegation Scope",
          "rdfs:comment": "What is delegated to this role",
          "schema:rangeIncludes": "xsd:string",
          "required": true,
          "example": "FP&A, budgeting, forecasting, variance analysis"
        },
        {
          "@id": "pf:autonomyLimit",
          "@type": "rdf:Property",
          "rdfs:label": "Autonomy Limit",
          "rdfs:comment": "Constraints on the delegation (escalation thresholds)",
          "schema:rangeIncludes": "xsd:string",
          "required": false,
          "example": "<$100K autonomous; strategic changes require CFO"
        }
      ]
    },
    {
      "@type": "rdfs:Class",
      "@id": "pf:FunctionalRole",
      "rdfs:subClassOf": "schema:EmployeeRole",
      "rdfs:label": "Functional Role",
      "rdfs:comment": "Operational or functional position below executive level, typically within a specific department or function",
      "schemaOrgAlignment": {
        "baseType": "schema:EmployeeRole",
        "rationale": "schema:EmployeeRole is appropriate for non-executive organizational positions",
        "extensions": [
          "function",
          "seniorityLevel"
        ]
      },
      "properties": [
        {
          "@id": "pf:function",
          "@type": "rdf:Property",
          "rdfs:label": "Function",
          "rdfs:comment": "Functional department or area this role belongs to",
          "schema:domainIncludes": "pf:FunctionalRole",
          "schema:rangeIncludes": "xsd:string",
          "enum": [
            "Marketing",
            "Sales",
            "Operations",
            "Finance",
            "Technology",
            "HR",
            "Legal",
            "Product",
            "Data",
            "Customer Success",
            "Strategy",
            "Innovation",
            "Compliance",
            "Security"
          ],
          "required": true,
          "example": "Marketing"
        },
        {
          "@id": "pf:roleTitle",
          "@type": "rdf:Property",
          "rdfs:label": "Role Title",
          "rdfs:comment": "Full title of the functional role",
          "schema:domainIncludes": "pf:FunctionalRole",
          "schema:rangeIncludes": "xsd:string",
          "required": true,
          "example": "Marketing Manager"
        }
      ]
    },
    {
      "@type": "rdfs:Class",
      "@id": "pf:RoleAssignment",
      "rdfs:subClassOf": "schema:Thing",
      "rdfs:label": "Role Assignment",
      "rdfs:comment": "Assignment of an INDIVIDUAL (schema:Person) to a ROLE within an ORGANIZATION context. Enables multi-venture role portfolios.",
      "schemaOrgAlignment": {
        "baseType": "schema:Thing",
        "rationale": "No direct schema.org equivalent for role assignment as a reified relationship",
        "extensions": [
          "individual",
          "role",
          "organization",
          "assignmentType",
          "timeCommitment",
          "isActive",
          "startDate",
          "endDate"
        ]
      },
      "properties": [
        {
          "@id": "pf:individual",
          "@type": "rdf:Property",
          "rdfs:label": "Individual",
          "rdfs:comment": "The INDIVIDUAL (schema:Person) who is assigned to the role",
          "schema:domainIncludes": "pf:RoleAssignment",
          "schema:rangeIncludes": "schema:Person",
          "cardinality": "1..1",
          "required": true,
          "businessMeaning": "The actual person filling this role"
        },
        {
          "@id": "pf:role",
          "@type": "rdf:Property",
          "rdfs:label": "Role",
          "rdfs:comment": "The ROLE being assigned (ExecutiveRole or FunctionalRole)",
          "schema:domainIncludes": "pf:RoleAssignment",
          "schema:rangeIncludes": ["pf:ExecutiveRole", "pf:FunctionalRole"],
          "cardinality": "1..1",
          "required": true,
          "businessMeaning": "The organizational position being filled"
        },
        {
          "@id": "pf:organization",
          "@type": "rdf:Property",
          "rdfs:label": "Organization",
          "rdfs:comment": "The ORGANIZATION within which this role assignment exists",
          "schema:domainIncludes": "pf:RoleAssignment",
          "schema:rangeIncludes": "schema:Organization",
          "cardinality": "1..1",
          "required": true,
          "businessMeaning": "The venture, company, or organizational unit context"
        },
        {
          "@id": "pf:assignmentType",
          "@type": "rdf:Property",
          "rdfs:label": "Assignment Type",
          "rdfs:comment": "Nature of the role assignment",
          "schema:domainIncludes": "pf:RoleAssignment",
          "schema:rangeIncludes": "xsd:string",
          "enum": [
            "Primary",
            "Secondary",
            "Acting",
            "Interim",
            "Advisory",
            "Board",
            "Consultant"
          ],
          "required": true,
          "example": "Primary"
        },
        {
          "@id": "pf:timeCommitment",
          "@type": "rdf:Property",
          "rdfs:label": "Time Commitment",
          "rdfs:comment": "Percentage of time commitment for this role (0-100)",
          "schema:domainIncludes": "pf:RoleAssignment",
          "schema:rangeIncludes": "xsd:float",
          "minimum": 0,
          "maximum": 100,
          "required": false,
          "example": 100.0
        },
        {
          "@id": "pf:isActive",
          "@type": "rdf:Property",
          "rdfs:label": "Is Active",
          "rdfs:comment": "Whether this role assignment is currently active",
          "schema:domainIncludes": "pf:RoleAssignment",
          "schema:rangeIncludes": "xsd:boolean",
          "required": true,
          "default": true
        },
        {
          "@id": "pf:startDate",
          "@type": "rdf:Property",
          "rdfs:label": "Start Date",
          "rdfs:comment": "Date when the role assignment began",
          "schema:domainIncludes": "pf:RoleAssignment",
          "schema:rangeIncludes": "xsd:date",
          "required": false
        },
        {
          "@id": "pf:endDate",
          "@type": "rdf:Property",
          "rdfs:label": "End Date",
          "rdfs:comment": "Date when the role assignment ended (null if active)",
          "schema:domainIncludes": "pf:RoleAssignment",
          "schema:rangeIncludes": "xsd:date",
          "cardinality": "0..1",
          "required": false
        }
      ]
    },
    {
      "@type": "rdfs:Class",
      "@id": "raci:RACIAssignment",
      "rdfs:subClassOf": "schema:Thing",
      "rdfs:label": "RACI Assignment",
      "rdfs:comment": "Defines who is Responsible, Accountable, Consulted, or Informed for a specific activity or process. Applied to ROLES, not individuals.",
      "schemaOrgAlignment": {
        "baseType": "schema:Thing",
        "rationale": "RACI is a governance concept with no direct schema.org equivalent",
        "extensions": [
          "activity",
          "role",
          "raciType",
          "context",
          "organization"
        ]
      },
      "properties": [
        {
          "@id": "raci:activity",
          "@type": "rdf:Property",
          "rdfs:label": "Activity",
