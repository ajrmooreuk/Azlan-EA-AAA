  "organizationSizeDefinitions": {
    "@type": "rrr:OrganizationSizeTaxonomy",
    "sizes": [
      {"code": "MICRO", "name": "Micro", "employeeRange": "1-10", "typicalCSuiteCount": "1-2", "description": "Founder/CEO often covers multiple C-Suite functions"},
      {"code": "SMALL", "name": "Small", "employeeRange": "11-50", "typicalCSuiteCount": "2-4", "description": "Core C-Suite with significant role subsumption"},
      {"code": "MEDIUM", "name": "Medium", "employeeRange": "51-250", "typicalCSuiteCount": "4-8", "description": "Expanded C-Suite with selective specialization"},
      {"code": "LARGE", "name": "Large", "employeeRange": "251-1000", "typicalCSuiteCount": "8-12", "description": "Full C-Suite with most functions represented"},
      {"code": "ENTERPRISE", "name": "Enterprise", "employeeRange": "1000+", "typicalCSuiteCount": "12-20+", "description": "Complete C-Suite with specialized and emerging roles"}
    ]
  },

  "raciXModel": {
    "@type": "rrr:ResponsibilityModel",
