{
  "@context": {
    "@vocab": "https://schema.org/",
    "baiv": "https://beaivisible.com/schema/",
    "wtp": "https://beaivisible.com/schema/wtp/"
  },
  "ontology": {
    "WillingStoPayOntology": {
      "@type": "DefinedTermSet",
      "@id": "baiv:WTPOntology",
      "name": "Willingness to Pay Customer Research Ontology",
      "description": "Comprehensive ontology for customer interview data, willingness to pay analysis, and pricing feedback collection for AI-driven PMF validation",
      "version": "1.0",
      "dateCreated": "2025-09-26",
      
      "entities": {
        "CustomerProfile": {
          "@type": "Person",
          "@id": "wtp:CustomerProfile",
          "extends": "schema:Person",
          "properties": {
            "contactId": {
              "@type": "Text",
              "description": "Unique identifier from source system"
            },
            "organization": {
              "@type": "Organization",
              "@id": "wtp:TargetOrganization"
            },
            "role": {
              "@type": "Text",
              "description": "Job title and responsibility level"
            },
            "decisionAuthority": {
              "@type": "QuantitativeValue",
              "minValue": 1,
              "maxValue": 5,
              "description": "Decision-making authority level (1=Input only, 5=Final authority)"
            },
            "budgetInfluence": {
              "@type": "QuantitativeValue",
              "minValue": 1,
              "maxValue": 5,
              "description": "Budget influence level"
            },
            "technicalExpertise": {
              "@type": "QuantitativeValue",
              "minValue": 1,
              "maxValue": 5,
              "description": "Technical understanding level"
            },
            "previousInterviews": {
              "@type": "ItemList",
              "itemListElement": "wtp:CustomerInterview"
            }
          }
        },

        "TargetOrganization": {
          "@type": "Organization",
          "@id": "wtp:TargetOrganization",
          "extends": "schema:Organization",
          "properties": {
            "industry": {
              "@type": "Text",
              "description": "Primary industry classification"
            },
            "employeeCount": {
              "@type": "QuantitativeValue",
              "description": "Number of employees"
            },
            "annualRevenue": {
              "@type": "MonetaryAmount",
              "description": "Annual revenue range"
            },
            "technologyBudget": {
              "@type": "MonetaryAmount",
              "description": "Annual technology/software budget"
            },
            "digitalMaturity": {
              "@type": "QuantitativeValue",
              "minValue": 1,
              "maxValue": 5,
              "description": "Digital transformation maturity level"
            },
            "aiAdoption": {
              "@type": "QuantitativeValue",
              "minValue": 1,
              "maxValue": 5,
              "description": "Current AI adoption level"
            },
            "competitorAnalysis": {
              "@type": "ItemList",
              "itemListElement": "wtp:CompetitorSolution"
            }
          }
        },

        "CustomerInterview": {
          "@type": "Event",
          "@id": "wtp:CustomerInterview",
          "extends": "schema:Event",
          "properties": {
            "interviewId": {
              "@type": "Text",
              "description": "Unique interview identifier"
            },
            "participant": {
              "@type": "wtp:CustomerProfile"
            },
            "interviewer": {
              "@type": "Person"
            },
            "duration": {
              "@type": "Duration",
              "description": "Interview duration"
            },
            "recordingUrl": {
              "@type": "URL",
              "description": "Link to interview recording"
            },
            "transcription": {
              "@type": "Text",
              "description": "Interview transcript"
            },
            "phases": {
              "@type": "ItemList",
              "itemListElement": "wtp:InterviewPhase"
            },
            "overallScore": {
              "@type": "wtp:WTPScore"
            },
            "followUpRequired": {
              "@type": "Boolean"
            },
            "referrals": {
              "@type": "ItemList",
              "itemListElement": "wtp:CustomerProfile"
            }
          }
        },

        "InterviewPhase": {
          "@type": "Action",
          "@id": "wtp:InterviewPhase",
          "properties": {
            "phaseType": {
              "@type": "Text",
              "enum": ["ProblemDiscovery", "SolutionEvaluation", "WTPTesting", "Implementation"]
            },
            "duration": {
              "@type": "Duration"
            },
            "responses": {
              "@type": "ItemList",
              "itemListElement": "wtp:QuestionResponse"
            },
            "insights": {
              "@type": "ItemList",
              "itemListElement": "wtp:Insight"
            },
            "phaseScore": {
              "@type": "QuantitativeValue",
              "minValue": 1,
              "maxValue": 5
            }
          }
        },

        "QuestionResponse": {
          "@type": "Comment",
          "@id": "wtp:QuestionResponse",
          "properties": {
            "questionId": {
              "@type": "Text",
              "description": "Standard question identifier"
            },
            "questionText": {
              "@type": "Text"
            },
            "response": {
              "@type": "Text"
            },
            "followUpQuestions": {
              "@type": "ItemList",
              "itemListElement": "Text"
            },
            "sentiment": {
              "@type": "QuantitativeValue",
              "minValue": -1,
              "maxValue": 1,
              "description": "Response sentiment score"
            },
            "confidence": {
              "@type": "QuantitativeValue",
              "minValue": 0,
              "maxValue": 1,
              "description": "Confidence level in response"
            },
            "keyQuotes": {
              "@type": "ItemList",
              "itemListElement": "Text"
            }
          }
        },

        "ProblemProfile": {
          "@type": "Thing",
          "@id": "wtp:ProblemProfile",
          "properties": {
            "problemDescription": {
              "@type": "Text"
            },
            "severity": {
              "@type": "QuantitativeValue",
              "minValue": 1,
              "maxValue": 5,
              "description": "Problem severity rating"
            },
            "frequency": {
              "@type": "Text",
              "enum": ["Daily", "Weekly", "Monthly", "Quarterly", "Annually", "Rarely"]
            },
            "currentCost": {
              "@type": "MonetaryAmount",
              "description": "Current cost of the problem"
            },
            "timeCost": {
              "@type": "Duration",
              "description": "Time cost per occurrence"
            },
            "opportunityCost": {
              "@type": "MonetaryAmount",
              "description": "Lost opportunity cost"
            },
            "urgency": {
              "@type": "QuantitativeValue",
              "minValue": 1,
              "maxValue": 5,
              "description": "Urgency to solve (1=Eventually, 5=Immediate)"
            },
            "currentSolutions": {
              "@type": "ItemList",
              "itemListElement": "wtp:CurrentSolution"
            }
          }
        },

        "CurrentSolution": {
          "@type": "Product",
          "@id": "wtp:CurrentSolution",
          "properties": {
            "solutionName": {
              "@type": "Text"
            },
            "solutionType": {
              "@type": "Text",
              "enum": ["Software", "Service", "Internal", "Manual", "Hybrid"]
            },
            "annualCost": {
              "@type": "MonetaryAmount"
            },
            "satisfactionLevel": {
              "@type": "QuantitativeValue",
              "minValue": 1,
              "maxValue": 5
            },
            "limitations": {
              "@type": "ItemList",
              "itemListElement": "Text"
            },
            "replacementLikelihood": {
              "@type": "QuantitativeValue",
              "minValue": 1,
              "maxValue": 5
            }
          }
        },

        "WTPScore": {
          "@type": "Rating",
          "@id": "wtp:WTPScore",
          "properties": {
            "overallScore": {
              "@type": "QuantitativeValue",
              "minValue": 1,
              "maxValue": 20,
              "description": "Composite WTP score"
            },
            "problemSeverity": {
              "@type": "QuantitativeValue",
              "minValue": 1,
              "maxValue": 5
            },
            "solutionFit": {
              "@type": "QuantitativeValue",
              "minValue": 1,
              "maxValue": 5
            },
            "willingnessToPay": {
              "@type": "QuantitativeValue",
              "minValue": 1,
              "maxValue": 5
            },
            "decisionAuthority": {
              "@type": "QuantitativeValue",
              "minValue": 1,
              "maxValue": 5
            },
            "timeline": {
              "@type": "Text",
              "enum": ["Immediate", "1-3months", "3-6months", "6-12months", "12months+", "NoTimeline"]
            },
            "budgetRange": {
              "@type": "wtp:BudgetRange"
            },
            "confidence": {
              "@type": "QuantitativeValue",
              "minValue": 0,
              "maxValue": 1,
              "description": "Confidence in WTP assessment"
            }
          }
        },

        "BudgetRange": {
          "@type": "MonetaryAmount",
          "@id": "wtp:BudgetRange",
          "properties": {
            "minAmount": {
              "@type": "MonetaryAmount"
            },
            "maxAmount": {
              "@type": "MonetaryAmount"
            },
            "preferredAmount": {
              "@type": "MonetaryAmount"
            },
            "budgetType": {
              "@type": "Text",
              "enum": ["Monthly", "Quarterly", "Annual", "ProjectBased", "PerUser", "PerUsage", "Outcome"]
            },
            "paymentTiming": {
              "@type": "Text",
              "enum": ["Upfront", "Monthly", "Quarterly", "Annual", "MilestoneBased"]
            },
            "priceElasticity": {
              "@type": "QuantitativeValue",
              "minValue": -5,
              "maxValue": 0,
              "description": "Price sensitivity measure"
            }
          }
        },

        "PricingFeedback": {
          "@type": "Review",
          "@id": "wtp:PricingFeedback",
          "properties": {
            "feedbackId": {
              "@type": "Text"
            },
            "customer": {
              "@type": "wtp:CustomerProfile"
            },
            "pricingModel": {
              "@type": "wtp:PricingModel"
            },
            "pricePoint": {
              "@type": "MonetaryAmount"
            },
            "reaction": {
              "@type": "Text",
              "enum": ["TooHigh", "High", "Reasonable", "Bargain", "TooLow"]
            },
            "reasoning": {
              "@type": "Text"
            },
            "alternatives": {
              "@type": "ItemList",
              "itemListElement": "wtp:CompetitorSolution"
            },
            "valuePerception": {
              "@type": "QuantitativeValue",
              "minValue": 1,
              "maxValue": 10
            },
            "purchaseIntent": {
              "@type": "QuantitativeValue",
              "minValue": 1,
              "maxValue": 10
            },
            "recommendationLikelihood": {
              "@type": "QuantitativeValue",
              "minValue": 1,
              "maxValue": 10,
              "description": "Net Promoter Score equivalent"
            },
            "feedbackDate": {
              "@type": "DateTime"
            }
          }
        },

        "PricingModel": {
          "@type": "Offer",
          "@id": "wtp:PricingModel",
          "properties": {
            "modelName": {
              "@type": "Text"
            },
            "modelType": {
              "@type": "Text",
              "enum": ["Freemium", "Subscription", "Usage", "Outcome", "Hybrid", "Enterprise"]
            },
            "tiers": {
              "@type": "ItemList",
              "itemListElement": "wtp:PricingTier"
            },
            "testResults": {
              "@type": "ItemList",
              "itemListElement": "wtp:PricingFeedback"
            },
            "conversionRate": {
              "@type": "QuantitativeValue",
              "minValue": 0,
              "maxValue": 1
            },
            "averageDealSize": {
              "@type": "MonetaryAmount"
            },
            "salesCycleLength": {
              "@type": "Duration"
            }
          }
        },

        "PricingTier": {
          "@type": "Offer",
          "@id": "wtp:PricingTier",
          "properties": {
            "tierName": {
              "@type": "Text"
            },
            "price": {
              "@type": "MonetaryAmount"
            },
            "features": {
              "@type": "ItemList",
              "itemListElement": "Text"
            },
            "limitations": {
              "@type": "ItemList",
              "itemListElement": "Text"
            },
            "targetSegment": {
              "@type": "Text"
            },
            "adoptionRate": {
              "@type": "QuantitativeValue",
              "minValue": 0,
              "maxValue": 1
            }
          }
        },

        "CompetitorSolution": {
          "@type": "Product",
          "@id": "wtp:CompetitorSolution",
          "properties": {
            "competitorName": {
              "@type": "Text"
            },
            "solutionName": {
              "@type": "Text"
            },
            "pricing": {
              "@type": "MonetaryAmount"
            },
            "pricingModel": {
              "@type": "Text"
            },
            "strengths": {
              "@type": "ItemList",
              "itemListElement": "Text"
            },
            "weaknesses": {
              "@type": "ItemList",
              "itemListElement": "Text"
            },
            "marketShare": {
              "@type": "QuantitativeValue"
            },
            "customerSentiment": {
              "@type": "QuantitativeValue",
              "minValue": 1,
              "maxValue": 5
            }
          }
        },

        "Insight": {
          "@type": "Thing",
          "@id": "wtp:Insight",
          "properties": {
            "insightType": {
              "@type": "Text",
              "enum": ["ProblemValidation", "PriceSensitivity", "FeatureImportance", "CompetitiveAdvantage", "DecisionProcess", "ImplementationBarrier"]
            },
            "description": {
              "@type": "Text"
            },
            "confidence": {
              "@type": "QuantitativeValue",
              "minValue": 0,
              "maxValue": 1
            },
            "impact": {
              "@type": "Text",
              "enum": ["High", "Medium", "Low"]
            },
            "actionable": {
              "@type": "Boolean"
            },
            "relatedInsights": {
              "@type": "ItemList",
              "itemListElement": "wtp:Insight"
            }
          }
        },

        "SegmentAnalysis": {
          "@type": "Report",
          "@id": "wtp:SegmentAnalysis",
          "properties": {
            "segmentName": {
              "@type": "Text"
            },
            "segmentCriteria": {
              "@type": "ItemList",
              "itemListElement": "Text"
            },
            "sampleSize": {
              "@type": "Integer"
            },
            "averageWTPScore": {
              "@type": "QuantitativeValue"
            },
            "priceRange": {
              "@type": "wtp:BudgetRange"
            },
            "commonPainPoints": {
              "@type": "ItemList",
              "itemListElement": "Text"
            },
            "preferredFeatures": {
              "@type": "ItemList",
              "itemListElement": "Text"
            },
            "decisionTimeline": {
              "@type": "Duration"
            },
            "competitiveThreats": {
              "@type": "ItemList",
              "itemListElement": "wtp:CompetitorSolution"
            },
            "recommendedPricing": {
              "@type": "wtp:PricingModel"
            }
          }
        }
      },

      "standardQuestions": {
        "ProblemDiscovery": [
          {
            "id": "PD001",
            "question": "Walk me through your current process for [specific task/challenge]",
            "followUps": ["How long does this typically take?", "Who's involved in this process?"],
            "expectedDataType": "Text",
            "analysisCategory": "CurrentState"
          },
          {
            "id": "PD002", 
            "question": "What's most frustrating about this current process?",
            "followUps": ["How often does this happen?", "What's the impact when it occurs?"],
            "expectedDataType": "Text",
            "analysisCategory": "PainPoint"
          },
          {
            "id": "PD003",
            "question": "What does it cost you when [problem] occurs?",
            "followUps": ["Time cost per occurrence?", "Opportunity cost?"],
            "expectedDataType": "MonetaryAmount",
            "analysisCategory": "Impact"
          }
        ],
        "SolutionEvaluation": [
          {
            "id": "SE001",
            "question": "What are you currently spending annually on [related category]?",
            "followUps": ["What's included in that budget?", "How is it allocated?"],
            "expectedDataType": "MonetaryAmount",
            "analysisCategory": "CurrentSpending"
          },
          {
            "id": "SE002",
            "question": "Who else would be involved in evaluating a solution like this?",
            "followUps": ["What's the typical decision process?", "How long does it take?"],
            "expectedDataType": "Text",
            "analysisCategory": "DecisionProcess"
          }
        ],
        "WTPTesting": [
          {
            "id": "WTP001",
            "question": "If a solution could [deliver specific outcome], what would that be worth to your business?",
            "followUps": ["How do you calculate ROI?", "What's acceptable payback period?"],
            "expectedDataType": "MonetaryAmount",
            "analysisCategory": "ValuePerception"
          },
          {
            "id": "WTP002",
            "question": "Would that investment be closer to $X or $Y per month?",
            "followUps": ["What pricing model do you prefer?", "Annual vs monthly?"],
            "expectedDataType": "wtp:BudgetRange",
            "analysisCategory": "PricingPreference"
          }
        ]
      },

      "pricingFeedbackStructure": {
        "CollectionMethods": {
          "DirectInterview": {
            "format": "wtp:CustomerInterview",
            "questions": "standardQuestions.WTPTesting",
            "analysisType": "Qualitative"
          },
          "SurveyForm": {
            "format": "schema:SurveyAction",
            "questions": "Structured questionnaire",
            "analysisType": "Quantitative"
          },
          "PilotProgram": {
            "format": "wtp:PricingFeedback",
            "questions": "Usage and satisfaction metrics",
            "analysisType": "Behavioral"
          },
          "ABTesting": {
            "format": "schema:Experiment",
            "questions": "Conversion rate optimization",
            "analysisType": "Statistical"
          }
        },
        "FeedbackLoop": {
          "Collection": "Gather pricing feedback",
          "Analysis": "Process through AI/ML models",
          "Insights": "Generate actionable insights",
          "Optimization": "Adjust pricing strategy",
          "Validation": "Test optimizations"
        }
      },

      "analyticsFramework": {
        "KPIs": {
          "CustomerLevel": [
            "WTP Score",
            "Purchase Intent",
            "Price Sensitivity",
            "Decision Timeline",
            "Budget Authority"
          ],
          "SegmentLevel": [
            "Average Deal Size",
            "Conversion Rate",
            "Sales Cycle Length",
            "Price Elasticity",
            "Market Penetration"
          ],
          "ProductLevel": [
            "PMF Score",
            "Revenue per Customer",
            "Customer Acquisition Cost",
            "Lifetime Value",
            "Churn Rate"
          ]
        },
        "MLModels": {
          "WTPPrediction": {
            "inputFeatures": ["CustomerProfile", "ProblemProfile", "CompetitorAnalysis"],
            "outputVariable": "WTPScore",
            "modelType": "Classification/Regression"
          },
          "PriceOptimization": {
            "inputFeatures": ["SegmentAnalysis", "CompetitorPricing", "ValuePerception"],
            "outputVariable": "OptimalPrice",
            "modelType": "Optimization"
          },
          "ChurnPrediction": {
            "inputFeatures": ["UsagePatterns", "SatisfactionScore", "PricingFeedback"],
            "outputVariable": "ChurnProbability", 
            "modelType": "Classification"
          }
        }
      }
    }
  }
}